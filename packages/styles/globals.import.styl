html
  min-height 100%
  position relative

body
  font-family inherit
  text-shadow 0 0 1px rgba(255,255,255,.5)
  margin-bottom $footer-height

.content-wrap
  padding-top 20px
  margin-bottom 40px
  padding-bottom $footer-height-actual+10

h2
  color $primary

h3
  color $secondary

h4
  color desaturate($primary, 20%)

h5
  font-weight 400
  color $d-gray

.view-header
  margin-top -20px
  margin-bottom 15px
  padding 20px 0
  border-bottom 2px solid $border-gray
  +below(2)
    padding-left 15px
    padding-right 15px
    margin-bottom 0
    margin-top -20px
  &.primary-bg
    background $background-primary
  &.secondary-bg
    background $background-secondary
  &.no-border
    border-bottom 0
  h1
    margin-bottom 0
    text-shadow 0 1px 0 rgba(255,255,255,.8)
  .container
    padding 0

.view-header-search
  position absolute
  top -90px
  right 0
  margin 15px 0 0 0
  width 30%
  +below(2)
    position static
    padding 12px
    margin 0
    width 100%
    background $border-gray
  .form-group
    margin 0
    position relative
  input
    padding-left 28px
  i
    position absolute
    top 50%
    left 10px
    transform translate(0,-50%)
    color $d-gray

a
button
.btn
  transition()
  &:hover
    transition()

a
  color $secondary
  &:hover
  &:focus
    color $primary

.btn
  border-width 2px
  .fa
    vAlign()
    font-size 110%
    line-height 0

.fa
  &.icon-right
    margin-left 3px
  &.icon-left
    margin-right 3px

.btn-primary
  makeButton($secondary)

.btn-default
  makeButton(lighten($m-gray, 50%), $body-text, true)

.btn-success
  makeButton($confirm)

.btn-danger
  makeButton($delete, white, false)

.btn-plain
  background none
  border 0
  padding 0
  &:focus
    outline 0
    box-shadow none

.button-default['disabled']
.btn['disabled']
  background lighten($secondary-light, 20%)
  color $body-text
  text-shadow none

.header-btn
  display inline-block
  margin-left 15px
  +below(1)
    display block
    margin 15px 0 10px 0
    padding 12px

.toast-top-right-custom
  right 15px
  top $header-height+20
  +below(2)
    right 0
    bottom $footer-height-actual+10
    top auto
    width 100%
    height $header-height

.toast-bottom-center
  bottom -7px
  left 50%
  transform translate(-50%, 0)

#toast-container
  > div
    +below(2)
      width 100% !important

.loading
  loading(false)
  position absolute
  left 50%
  top 100px
  transform translate(-50%, 0)
  text-align center
  &.top
    top 20px
  &.center-v
    top 50%
    transform translate(-50%, -50%)

.col-sm-0
  width 0%

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0

.rm-pad-btm
  padding-bottom 0

.rm-margin-top
  margin-top 0

.rm-margin-btm
  margin-bottom 0

.inline
  display inline-block
  vertical-align middle

.full-width-table
  margin-top -15px
  +below(1)
    margin-top -5px
  border-top 1px solid $l-gray
  .table-content-wrap
    border-bottom 1px solid $l-gray
    .container
        padding 15px 0
  td.title
    font-size 120%
    font-weight bold
  .controls
    text-align right

.pagination
  margin-top 0 !important

// Overide the default spinner of the alethes:pages package to make spinners consistent
.pagesLoadingDefaultCont
  @extend .loading
.pagesLoadingDefault
  display none !important


for $num in 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

for $num in 1 2 3
  .border-btm-{$num}
    addBorder('bottom', $num, $l-gray)

  .border-top-{$num}
    addBorder('top', $num, $l-gray)
