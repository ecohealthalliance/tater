template(name="admin")
  if currentUser
    if isAdmin
      .container.space-btm-4.space-top-1
        .row
          .col-sm-6
            .groups-container
              .view-header
                .container
                  h1.inline Groups
                  a.btn.btn-primary.new-group-link.header-btn(href="{{path route='newGroup'}}")
                    span Create
                    i.fa.fa-users
              +groups
          .col-sm-6
            section.rm-pad-top
            .view-header
              .container
                h1.inline Users
                a.btn.btn-primary.new-user-link.header-btn.add-admin(data-toggle="modal" data-target="#add-admin-modal")
                  span Create New Admin User
                  i.fa.fa-user-plus
            .users-container
              +users
  else
    .container
      .row
        .col-sm-12
          p Please log in or sign up to continue.
