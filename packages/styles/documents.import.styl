.documents
  .group-name
    display block
    margin-top 10px
    color $primary-light
    font-weight 400
    font-style italic
    margin 10px 0 0 0
    span
      font-style normal
      font-weight 700

.annotation-list
.search-list-result
  list-style none

.document-list-container
  div, h4
    display inline
.headers
  h4
    cursor pointer
  .title-header
    width 52%
    float left
    padding-left 10px
  .date-header
    float left
    width 36%

.document-list
  min-height 460px
  border-top 0
  +below(2)
    margin-top 0
  li
    position relative
    &
    &:last-of-type
      border 1px solid $border-gray
      border-top 0
    &:last-of-type
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
    &:hover
      background $background-secondary

  .list-link
    padding-right 60px

  .document-title
  .document-group
    truncateString()

  .document-title
    width 53%
    font-size 1.1em
    float left
    padding-left 10px

  .document-group
    position relative
    float right
    text-align right
    color darken($m-gray, 10%)
    font-size 95%
    font-style italic

.annotation-state
  float left
  overflow hidden
  text-align right
  color $m-gray
  &:hover
    color $primary

.delete-document-button
  position absolute
  top 0
  bottom 0
  right 0
  margin-bottom 0
  width 50px
  font-size 1.5em
  color $m-gray
  &:hover
    background-color $delete
    color white
  i
    centerPosition()
