.modal-body
  padding 35px 25px 25px
  h3
    margin-bottom 20px

.modal-header
  min-height 0
  padding 0
  border 0
  .close
    position absolute
    top 15px
    z-index $bottom-layer
    right 15px

.modal
  input[type=submit]
  input[type=button]
    display inline-block
    padding 10px

  input[type=submit]
    min-width 150px
    margin-left 5px

.modal-buttons
  float right
