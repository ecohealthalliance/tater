.container-list
  min-height 200px
  position relative

.list
  border-top 0
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  background #fff
  containerShadow()
  li
    position relative
    &:last-of-type
      border-bottom 0
  &.stripped
    li
      &:nth-of-type(odd)
        background $ll-gray

  .list-link
    padding 12px
    display block
    linkTransition()
    color lighten($body-text, 15%)
    &:hover
      background $background-secondary
      text-decoration none
      color $secondary-dark
  .btn-list
    i
      cursor pointer

.list-simple
  margin-left -5px
  margin-bottom 10px
  li
    border-bottom 1px solid $l-gray
    &:last-of-type
      border 0
  a
    display block
    padding 5px
    color $body-text
    &:hover
      text-decoration none
      background $background-secondary

.list
.list-simple
  .view-all
    background $background-secondary

.list-table
  addBorder('top', 1, $border-primary)
  margin-bottom 50px
  table
    overflow visible
    background #fff
    box-shadow 0 1px 2px rgba(100,100,100,.2)
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
  .reactive-table-navigation
    padding 0 15px
  .table
    > thead
      background-color lighten($background-primary, 60%)
      > tr
        > th
          padding 12px 15px
  .form-group
    margin-bottom 0
