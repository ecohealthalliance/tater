.annotations-list-container
  .pagesCont
    margin-bottom 20px
    min-height 300px

.annotation-list-heading
  width 55%
  padding-right 20px

.no-annotations
  padding 30px
  color $d-gray
  text-align center
  font-size 1.25em
  font-weight 600
  +above(3)
    font-size 1.5em

.no-results
  margin-top 10px

.annotation-details-wrap
  h3
    body-font()
    padding-left 15px
    padding-right 20px
    font-size 1.5em
    font-weight 600
    truncateString(false)
  for $color, $index in $annotation-colors
    &.color-{$index+1}
      h3
        color darken($color, 20%)
        margin-top 30px
      .annotation-detail
        background-color lighten($color,80%)
        border-top 2px solid transparent
        border-bottom 2px solid transparent
        linkTransition()
        &:hover
          background-color darken(@background-color, 5%)
          border-color darken($color, 10%)
  .details
    color $d-gray

.annotation-detail
  padding 15px 35px 15px 15px
  margin-bottom 10px
  position relative
  &:hover
    .link
      visibility visible
      opacity 1
  p
    margin-bottom 10px
    max-width 90%

  .link
    position absolute
    top 12px
    right 15px
    max-width 10%
    padding 2px 10px
    visibility hidden
    opacity 0
    pointer()
    background rgba(255,255,255,.4)
    margin-right -15px
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    border 1px solid transparent
    border-right 0
    color $body-text
    &:hover
      background rgba(255,255,255,.8)
      text-decoration none
      border-color $secondary
  .details
    font-size 90%
  .document-title
    float left
  .user-email
    float right

.show-flagged
  line-height 36px
  &
  input
    pointer()
  &:hover
    color black
  i
    margin-left 4px

.document-list-container
  .group-docs-list
    margin-top -10px
  .group-docs
    margin-left 40px
    margin-bottom 15px
    li
      &:last-child
        border 0
  .group-selector
    @extend .code-header
    position relative
    font-weight 700
    i
      top 5px
      color $primary-light
      &:hover
        color $primary-dark
    > span
      pointer()
      padding 5px 10px 5px 5px
      borderRadius(4px, 0, 0, 4px)
      border 1px solid transparent
      border-right 0
      &:hover
      &.selected
        selectedBG()
      &.selected
        padding-right 40px
      &:hover
        background-color lighten($primary-light, 95%)
        border 1px solid lighten($primary-light, 80%)
        border-right 0
    &.disabled
      i
        color lighten($primary-light, 70%)
        cursor auto
        &:hover
          color @color
      > span
        color $d-gray
        cursor auto
        &:hover
          background none

  .document-selector
    pointer()
    linkTransition()
    position relative
    padding 7px 35px 7px 15px
    border-bottom 1px solid $l-gray
    &:hover
    &.selected
      selectedBG()
      borderRadius(2px, 0, 0, 2px)
      border-bottom 1px solid $l-gray
    &:hover
      background-color lighten($primary-light, 95%)
  .group-selector span
  .document-selector
    &.selected
      &::after
        @extend .icon
        centerVertically()
        right 15px
        content '\f06e'
        color lighten($secondary-light,30%)
  .group-selector span
    &.selected
      &::after
        right 13px

.document-list-heading
  h2
    body-font()
    font-size 18px
    +below(1000px)
      font-size 16px

+below(1000px)
  .clear-filters
    i
      &:before
        margin-left 1px

.doc-group
  display block
  color $d-gray
  font-size 80%

.doc-title
  font-weight 600

.download-csv
  margin-left 15px
  margin-top 3px

#download-csv-modal
  .modal-body
    min-height 200px

.download-csv-btn
  margin-top 20px
