template(name="header")
  header
    nav.navbar
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target=".navbar-collapse") Menu
          a.navbar-brand(href="/")
            h1 Tater
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            if currentUser
              if isAdmin
                li
                  a(href="{{path route='groups'}}")
                    span Groups
              else
                li
                  a.header-documents-link(href="{{path route='documents' params=documentsLinkParams}}")
                    span Documents
            +accountsHeaderButtons state=accountsState
  +accountsModal state=accountsState
