template(name="deleteDocumentModal")
  #confirm-delete-document-modal.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          h3#myModalLabel Confirmation
          p Are you sure you want to delete this document?
        .modal-footer
          button.btn.btn-default(data-dismiss='modal' aria-hidden='true') Close
          button.btn.btn-danger#confirm-delete-document(data-dismiss='modal' aria-hidden='true') Delete
