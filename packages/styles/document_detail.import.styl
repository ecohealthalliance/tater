.document-detail-container
  position absolute
  min-height 100%
  height 100%
  top $header-height
  bottom 0
  left 0
  right 0

.coding-container
.annotation-container
.document-container
  position absolute
  top 0
  bottom $footer-height
  width 20%
  padding 20px
  overflow-x scroll

.coding-container
  left 0
  border-right 2px solid $primary
  li
    padding .3em 0

.code-header
.code-sub-header
.code-keyword
  cursor pointer

.code-header
  font-size 18px
  font-weight 800
  color $body-text

.code-sub-header
  font-size 15px

.code-keyword
  font-size 13px
  font-weight 400

.code-sub-headers
.code-keywords
  padding-left 1.25em

.document-title-container
  h1
    padding 15px 5% 10px 5%
    font-family $body-font
    font-size 25px
    background lighten(desaturate($secondary, 20%), 90%)

.document-container
  width 60%
  left 20%
  padding 0
  line-height 1.75em

.document-body
  padding 20px 5%
  p
    font-weight 400
    &::selection
      background-color $selection-color
      color $background-primary

.annotation-container
  right 0
  border-left 2px solid $primary
