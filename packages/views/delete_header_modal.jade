template(name="deleteHeaderModal")
  #confirm-delete-header-modal.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          h3#headerModal Confirmation
          p Delete header "{{headerToDelete.label}}"?
        .modal-footer
          button.btn.btn-default(data-dismiss='modal' aria-hidden='true') Close
          button.btn.btn-danger#confirm-delete-header(
            aria-hidden='true'
            disabled='{{#unless archiving}} disabled {{/unless}}') 
            | Delete
            unless archiving
              i.fa.fa-spinner.fa-pulse
