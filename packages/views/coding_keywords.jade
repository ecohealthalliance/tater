template(name="codingKeywords")
  .container
    .code-container.col-sm-4
      ul.code-list.list-unstyled.level-1
        each headers
          li.code.code-level-1(class="{{selected 'header'}}")= header
      input.add-code.add-level-1.form-control(placeholder="New Code")

    .code-container.col-sm-4
      h5= currentlySelectedHeader
      ul.code-list.list-unstyled.level-2
        each subHeaders
          li.code.code-level-2(class="{{selected 'subHeader'}}")= subHeader
      input.add-code.add-level-2.form-control(placeholder="New Code")

    .code-container.col-sm-4
      h5= currentlySelectedSubHeader
      ul.code-list.list-unstyled.level-3
        each keywords
          li.code.code-level-3.not-clickable= keyword
      if currentlySelectedSubHeader
        input.add-code.add-level-3.form-control(placeholder="New Code")
