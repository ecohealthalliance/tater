.annotation-list-heading
  width 55%
  padding-right 20px

.annotation-group
  h3
    body-font()
    padding-left 15px
    font-size 1.5em
    font-weight 600
  for $color, $index in $annotation-colors
    &.color-{$index+1}
      h3
        color darken($color, 20%)
      .annotation-detail
        background-color lighten($color,80%)
        border-top 2px solid transparent
        border-bottom 2px solid transparent
        linkTransition()
        &:hover
          background-color darken(@background-color, 5%)
          border-color darken($color, 10%)
      .details
        color darken($color, 10%)

.annotation-detail
  cursor pointer
  padding 15px 35px 15px 15px
  margin-bottom 10px
  p
    margin-bottom 10px
  .details
    font-size 90%
  .document-title
    float left
  .user-email
    float right

.show-flagged
  float right
  line-height 36px
  i
    margin-left 4px

.document-list-container
  margin-top -20px
  li
    padding 15px
    border-bottom 1px solid lighten($primary-light, 60%)
    position relative
    pointer()
    &:hover
      background-color $ll-gray
    &.selected
      background-color lighten($primary-light, 80%)
      &::after
        @extend .icon
        centerVertically()
        right 15px
        content '\f06e'
        color $primary-light

.document-list-heading
  h2
    body-font()
    font-size 18px

.doc-group
  display block
  color $d-gray
  font-size 80%
