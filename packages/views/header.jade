template(name="header")
  header
    nav.navbar
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target=".navbar-collapse") Menu
          a.navbar-brand(href="/")
            h1 Tater
        .navbar-collapse.collapse
          if currentUser
            ul.nav.navbar-nav.navbar-left
              li
                a.btn.navbar-btn.new-document(href="{{path route='newDocument'}}")
                  span New Document
                  i.fa.fa-file-text-o
          ul.nav.navbar-nav.navbar-right
            if currentUser
              if isAdmin
                li
                  a.header-documents-link(href="{{path route='documents'}}")
                    span Documents
                li
                  a(href="{{path route='admin'}}")
                    span Admin
              else
                li
                  a.header-documents-link(href="{{path route='groupDocuments' params=documentsLinkParams}}")
                    span Documents
            +accountsHeaderButtons state=accountsState
  +accountsModal state=accountsState
