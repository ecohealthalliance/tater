.help-nav-wrap
  padding 0
  .nav
    a
      color $body-text
      display block
      &:focus
      &:hover
        text-decoration none
        color $secondary

.help-container
  position relative
  .list-group
    border 0
    li
      border 0

.help-nav
  float none
  li
    padding 0
    .list-group
      padding-left 15px
      padding-right 15px
      margin-bottom 5px
      li
        padding 0
        margin-bottom 2px
  > li
    margin-bottom 20px
  > li > a
    font-size 110%
    font-weight bold
    padding 0
    &:hover
    &:focus
      background none
  a
    padding 0

  .list-group-item
    background none
    &.active
      &
      &:focus
      &:hover
        background none
        color $primary
        border 0
        > a
          margin-top 3px
          margin-bottom 3px
          margin-left -10px
          padding 5px 10px
          color $primary
          font-weight bold
          background $background-secondary
          border-radius 3px
          text-decoration none

.affix
  top 20px
  +below(3)
    width 180px

.help-content
  > .help-section
    margin-bottom 60px
