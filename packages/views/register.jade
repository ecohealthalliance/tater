template(name="register")
  .container
    .col-sm-6.col-sm-offset-3
      h1 Tenant Registration
      if registering
        form#tenant-registration
          label Full Name
            input.form-control.full-name(name='fullName' type='text' required)
          label Email Address
            input.form-control.email(name='emailAddress' type='email' required)
          label Password
            input.form-control.password(name='password' type='password' required)
          label Confirm Password
            input.form-control.password-check(name='passwordCheck' type='password' required)
          label Organization Name
            input.form-control.org-name(name='orgName' type='text')
          label Tenant Name
          .input-group
            input.form-control.tenant-name(name='tenantName' type='text' required)
            .input-group-addon .tater.io
          input.btn.btn-primary(type='submit' value="Become a beta test user")
      else
        .registered
        p Thank you for registering. Please allow up to 24 hours for registration to complete
