checkMark(center=false)
  &:hover
    &:after
      position absolute
      right 5px
      if center
        top 50%
        transform translate(0, -50%)
      else
        top 3px
      @extend .icon
      content '\f058'

.clear-search
  position absolute
  right 25px
  top 50%
  transform translate(0,-50%)
  color $d-gray
  pointer()
  linkTransition()
  &:hover
    color $delete

.code-header
.code-sub-header
.code-keyword
  position relative
  shadow(255,.2)
  i
    color $m-gray
    &:hover
      color $m-gray

.coding
  .code-keyword
    checkMark(true)

.listing
  .showing:not(.selected)
    background none !important
  .clear-codes-container
    margin-top -10px

.code-header
.code-sub-header
  position relative
  > span
    padding 2px 20px 2px 5px
  i
    position absolute
    left 15px
    top 2px
    cursor pointer
    font-size 1em
    &::before
      content '\f138'
      @extend .icon
    &.up
      transition .2s
      transform rotate(90deg)
    &:hover
      color darken($secondary-dark, 20%)
      transition .2s ease-in-out

.code-header > span
.code-sub-header > span
.code-keyword > span
.filteredCodes > span
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  &:not(.selectable-code)
    color $m-gray

.clear-codes-container
  margin 15px
  button
    makeButton(darken($background-secondary, 10%), black, true, true)

.code-header
  margin-bottom 5px
  font-size 18px
  font-weight 800
  color $body-text
  > span
    display block
    position relative
    margin-left 35px
    overflow hidden
    text-overflow ellipsis
  .header-name
    display block
    padding-left 5px
  for $color, $index in $annotation-colors
    &.code-header-{$index+1}
      &.selectable
        > span
          &.selectable-code
            &:hover
              transition .2s ease-in-out
            &.selected
              background-color $color
        > i
          color darken($color, 10%)
          &:hover
            color darken(@color, 10%)
        &:hover
          &:after
            color darken($color, 40%)

      .code-sub-header
        &.selectable
          > span
            padding-left 6px
            background-color transparent
            transition .1s ease-in-out
            &.selectable-code
              &.showing
                transition .1s ease-in-out
                &:after
                  color darken($color, 20%)
                  centerVertically()
              &:hover
                transition .2s ease-in-out
            &.selected
              background-color $color
          > i
            color darken($color, 10%)
            &:hover
              color darken(@color, 10%)
        &:hover
          &:after
            color darken($color, 20%)
            &:after
              color darken($color, 30%)
              top 2px
              transform translate(0, -50%)
        .code-keyword
          > span
            border-bottom 1px solid lighten($color, 80%)
            transition .1s ease-in-out
            &:last-of-type
              border 0
          &.selectable
            > span
              pointer()
              &:hover
                background-color lighten($color, 20%)
                transition .1s ease-in-out
              &.selected
                background-color $color
                font-weight bold
            &:hover
              &::after
                centerVertically()
                color darken($color, 20%)

.code-sub-headers
.code-keywords
  margin 5px 0 15px 0

.code-sub-header
  padding-left 53px
  margin-bottom 2px
  font-size 15px
  font-weight 600
  span
    display block
    padding-left 5px
    margin-left 2px
  i
    left 38px
    top 0
    font-size 1.2em

.code-keywords
  padding-left 10px
  
.delete-keyword-button, .delete-subheader-button, .delete-header-button
  centerVertically()
  right 20px
  font-size 1.5em
  color $m-gray
  &:hover
    color $delete

.delete-subheader-button, .delete-header-button
  right 40px

.code-keyword
  font-size 13px
  font-weight 400
  overflow hidden
  text-overflow ellipsis
  span
    padding 0
    padding 5px 15px 5px 5px

.filteredCodes
  margin-bottom 20px
  li
    position relative
    cursor pointer
    overflow hidden
    text-overflow ellipsis
    border-bottom 1px solid $border-color
    > span
      display block
      padding 5px 15px 5px 15px
      &:not(.selectable-code)
        color $m-gray
  .selectable
    for $color, $index in $annotation-colors
      &.code-{$index+1}
        .selected
          background-color $color
        &:hover
          background-color lighten($color, 10%)
  .header
      font-size 90%
  .sub-header
    font-weight 600
  .keyword
    font-weight 700

.filter-result
  .selectable-code
    &:hover
      background-color lighten($primary-light, 95%)
  .selected
    background-color desaturate(lighten($primary-light, 85%), 80%)

// Management

.code-management-container
  position relative
  min-height 700px
  border 1px solid $m-gray
  border-top 0
  border-bottom-right-radius 3px
  border-bottom-left-radius 3px
  overflow hidden

.code-list-header
  position absolute
  max-height 50px
  z-index $mid-layer
  top 0
  left 0
  right 0
  padding 10px
  background $sub-header-BG
  border-bottom 2px solid lighten($primary-light, 60%)
  .add-code
    centerVertically(true)
    pointer()
    right 10px
    font-size 1.5em
    color $d-gray
    &:hover, &.active
      color $secondary

.code-list-wrap
  position relative
  min-height 700px
  border-right 1px solid lighten($primary-light, 60%)
  &:last-of-type
    border-right 0

.code-list
  margin-bottom 0

.code-list-container
  overflow-x auto
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 50px 0 0 0
  padding-bottom 50px
  li
    position:relative
    padding 10px
    &
    &:last-of-type
      border-bottom 1px solid lighten($l-gray, 20%)
    &.selected
      background lighten($background-secondary, 20%)
      font-weight bold
      &::after
        color $d-gray
    &::after
      @extend .icon
      content '\f054'
      centerVertically(true)
      right 15px
      color $l-gray

  .code
    pointer()

  .not-clickable
    cursor auto
    &:hover
      background none
      color inherit
    &::after
      content ''

.code-details
  min-height 60px
  padding 15px
  background alpha($sub-header-BG, 80%)
  position absolute
  bottom 0
  left 0
  right 0

.disabled
  color lighten($primary-light, 70%) !important
  
.disabled span::after
  content ' (archived)'
  
.adding-code
  padding 15px 10px
  position relative
  background $sub-header-BG
  border-bottom 1px solid lighten($primary-light, 60%)
  input
    margin 0 0 10px 0
  .add
    width 75%
    float left

  .cancel
    width 23%
    float right

  .close
    @extend .icon
    position absolute
    right 5px
    top 5px
    content '\f00d'
