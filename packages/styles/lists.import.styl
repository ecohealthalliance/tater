.container-list
  padding-left 0
  padding-right 0
  min-height 200px
  position relative

.list
  border-top 0
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  li
    position relative
    &:nth-of-type(odd)
      background $ll-gray
    &:last-of-type
      border 0
  .list-link
    padding 15px
    display block
    linkTransition()
    color lighten($body-text, 15%)
    &:hover
      background $background-secondary
      text-decoration none
      color $secondary-dark
  .btn-list
    i
      cursor pointer

.list-simple
  margin-left -5px
  margin-bottom 10px
  li
    border-bottom 1px solid $l-gray
    &:last-of-type
      border 0
  a
    display block
    padding 5px
    color $body-text
    &:hover
      text-decoration none
      background $background-secondary

.list
.list-simple
  .view-all
    background $background-secondary

.list-table
  border-top 0
  margin-bottom 50px
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  .reactive-table
    overflow visible
  .reactive-table-navigation
    padding 0 15px
  .table
    > thead
      background $background-primary
      > tr
        > th
          padding 12px 8px
  tr
    &:last-of-type
      border-bottom 2px solid $border-gray
  .form-group
    margin-bottom 0
  .reactive-table-options
    display none

