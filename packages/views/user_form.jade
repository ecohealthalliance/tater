template(name="userForm")
  if typeIsAdmin
    h4 Create a new Admin User
  else
    h4 Add a new group user
    p #[b Group]: #[i #{group.name}]
  form#new-user-form.clearfix
    unless typeIsAdmin
      input.form-control(name="group" type="hidden" value=group._id)
    label Email
      input.user-email.form-control(name="email" type="text")
    label Full Name
      input.user-name.form-control(name="name" type="text")
    label Password
      input.user-password.form-control(name="password" type="password")
    label Password confirm
      input.user-password-confirm.form-control(name="passwordconfirm" type="password")
    .modal-buttons
      input.btn.btn-default.cancel(type="button" value="Cancel" data-dismiss="modal")
      input.btn.btn-primary(type="submit" value="Add User")
