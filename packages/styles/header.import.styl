header
  position relative
  z-index $top-layer

// Hide header if body has 'no-header class'
.no-header
  header
    display none

.container > .navbar-header
  +below(3)
    margin 0

.navbar
  min-height $header-height
  margin-bottom 0
  border 0
  border-bottom 2px solid $primary
  border-radius 0
  background $header-BG
  if $header-text-shadow
    @extend .dark-shadow
  .btn
  .btn-default
    padding 6px 12px
    margin-left 5px
    border 0
    font-size 13px
    text-shadow none
    color $body-text
    line-height 1.42857143
    buttonHover($nav-hover, $white-trans)
    transition()
    &.new-document
      float left
      margin-left 12px
      margin-top 12px
      @extend .dark-shadow
      &:hover
      &:focus
        color white
      +below(2)
        float none
        width 60%
        margin 10px auto
    &.sign-in
      position absolute
      top 0
      right 15px
      border 1px solid $secondary
      color lighten($dd-gray, 10%)
      +below(1)
        margin-right 0

.nav
  float right
  +below(2)
    float none
    border-bottom 1px solid $secondary-light
    &.account
      margin-left 0
      border 0
    &.main-nav-last
      margin 0
    &:last-of-type
      border 0
    a
      &:hover
        background $primary

.navbar-nav
  +below(1)
    margin-right 0
    margin-top 0
  > li
    > a
    > a:focus
      buttonHover($nav-hover)
      color $header-link-color
      line-height 14px
      padding 20px 15px
      border-right 1px solid white
      outline none
      +below(1)
        padding 12px 30px
      i
        font-size 16px
        line-height 0
      &.admin-settings
        .fa
          margin-top -3px
          margin-left 3px
    > a.navbar-btn
      margin-top 11px
      margin-left 15px
      padding 9px 10px
      border-radius 5px
      background $secondary
      text-align center
      color white
      line-height 100%
      transition(background-color)
      i
      span
        vAlign()
      i
        font-size 16px
        line-height 0
      &:hover
        transition(background-color)
        background $primary
      +below(1)
        float none
        width 50%
        margin 10px auto
        padding 12px inherit
    > a.active
    > a.active:focus
      background $primary
      color white
      outline 0
  li
    &.open
      +below(1)
        .dropdown-menu
          border-top 4px solid $primary-dark
            > li
              border-bottom 1px solid $secondary-light
              &:last-of-type
                border 0
              > a
                color white
                font-size 12px
                &:hover
                  background $primary
      > a
        &
        &:hover
        &:focus
          border-color white
        &:hover
          background $primary
        &.dropdown-toggle
          color: white
          background $primary
      .dropdown-menu
        > li
          > a
            +below(1)
              color $body-text
              font-size 12px
              padding 10px 15px 10px 40px
              &:hover
                background $primary
                color white
              &.dropdown-toggle
                background $primary
  .dropdown-menu
    padding-top 0
    border-top 2px solid $primary
    +below(1)
      padding 0
      position static
      min-width 100%
      background none
      box-shadow none
      border 0
    > li
      text-shadow none
      &:last-of-type
        border 0
      > a
        clearFix()
        position relative
        padding 8px 30px 8px 30px
        text-shadow none
        font-size 13px
        &:hover
          cursor pointer
          background $background-secondary
        span
          padding-right 5px
        i
          centerPosition(0, -50%)
          left 8px
          top 50%
          width 20px
          color $d-gray
          +below(1)
            color white
            centerPosition(0,0)
            position static

.navbar-brand
  display block
  height $brand-height
  margin-top $brand-top-margin
  padding 0
  margin-left 0
  transition(.2s, color)
  +below(2)
    transition(.2s, color)
    margin-top $brand-top-margin - 1
  &:hover
  &:focus
    span
    h1
      transition(.2s, color)
      color lighten($secondary,80%)
  h1
    vAlign()
    margin 0
    padding-left 3px
    bg('../../images/tater-logo', $brand-width, $brand-height,'png')
    transition(.2s, color)
    color white
    font-weight 600
    text-transform uppercase
    line-height 18px
    font-size 18px
    +below(1)
      font-size 14px
      line-height 14px
  span
    +below(1)
      font-size 25px

.container-fluid
  padding-left 10px
  padding-right 10px

.container > .navbar-header
.container-fluid > .navbar-header
  margin-left 0
  margin-right 0

.navbar > .container .navbar-brand
.navbar > .container-fluid .navbar-brand
  margin-left 0

.navbar-toggle
  float right
  padding 13px 10px
  margin 10px 0 0 0
  border 1px solid $primary
  border-radius 4px
  transition()
  color $primary
  font-size 14px
  line-height 0
  &:hover
  &:active
  &:focus
    transition()
    background $white-trans
    color black

.navbar-collapse
  +below(2)
    margin-top 10px
    padding-bottom 15px
    border-top 3px solid $primary
    box-shadow none
    &.in
      border-top 3px solid $primary
      box-shadow none
  +at(1)
    &.collapse
    &.collapsing
      padding 0

.main-nav-last
  margin-right 0

.dropdown
  +above(3)
    &:hover
      &
        background $primary
        > a
          color white
          text-shadow none
      .dropdown-menu
        display block
    .dropdown-toggle
      pointer-events none
      pointer()
      span
        +below(1)
          display inline-block
      &:hover
        background $primary
