template(name="documents")
  .document-detail-container
    {{> codingKeywords }}
    .document-heading
      if codesSelected
        h1 Document Annotations By Code Keyword
      else
        h1 All Documents  
    .document-container
      if codesSelected
        .annotations-selected-container
          ul.annotation-list.search-list-result
            each selectedCodes
              li
                span.label.label-default
                  span= codeKeyword.header
                  span= codeKeyword.subHeader
                  span= codeKeyword.keyword
                  span.badge.dismiss-selected(data-id='#{codeKeyword._id}') X
                ul.annotation-list.search-list-result
                  each docsWithCodeId this.codeKeyword
                    li
                      a(href="{{path route='documentDetail' params=this}}")
                        span.document-title= title
                      ul.annotation-list.search-list-result
                        each annotationsInDoc this ../codeKeyword
                          li
                            span [
                            span= startOffset
                            span -
                            span= endOffset
                            span ]
                            span= annoText
                            
      else if documents
        ul.document-list.list-unstyled
          each documents
            li.document
                a(href="{{path route='documentDetail' params=this}}")
                  span.document-title= title
                  span.document-group= groupName
      else
        p No documents have been uploaded.

            
     