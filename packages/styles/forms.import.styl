select.form-control
input.form-control
textarea.form-control
  border 2px solid $m-gray
  font-size 14px
  font-weight normal
  &:focus
    outline 0
    box-shadow none
    border-color $secondary

input[type="submit"]
  margin 20px 0
  +above(1)
    padding-left 20px
    padding-right 20px
    font-size inherit
  +mobile()
    width 100%
    padding 12px
    font-size 110%

form
  .form-group
    &:last-of-type
      margin 0
  textarea
    &:last-child
      margin-bottom 0

.form-group
  margin-bottom 15px

label
  margin-bottom 5px
  span
    display block
    margin-bottom 5px
  .requirements
    color $d-gray
    font-size 90%
    font-weight normal

textarea
  min-height 200px

textarea
select
  margin-bottom 15px

.checkbox
  label
    span
      font-weight bold

.required-text
  color $d-gray
  font-size 110%
  span
    color $deny
    font-weight bold
    font-size 15px

.required
  &::after
    content '*'
    display inline-block
    color $deny
    padding-left 2px
