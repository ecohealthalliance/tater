.documents
  .group-name
    display block
    margin-top 10px
    color $primary-light
    font-weight 400
    font-style italic
    margin 10px 0 0 0
    span
      font-style normal
      font-weight 700

.annotation-list
.search-list-result
  list-style none

.document-list
  margin-top -15px
  border 1px solid $border-gray
  border-top 0
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  li
    position relative
    border-bottom 1px solid $border-gray
    &:last-of-type
      border 0

  .document-title
  .document-group
    truncateString()

  .document-title
    width 55%
    font-size 1.1em
    float left

  .document-group
    width 40%
    float right
    text-align right
    color darken($m-gray, 10%)
    font-size 95%
    font-style italic

  .document-annotated
    width 1.8%
    float right
    overflow hidden
    text-align right

.delete-document-button
  centerVertically()
  right 20px
  font-size 1.5em
  color $m-gray
  &:hover
    color $delete
