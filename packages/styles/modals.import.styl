.modal-body
  padding 35px 25px 25px
  h4
    font-weight 800
  h3
    margin-bottom 20px
  .secondary-info
    margin-bottom 20px
    font-size 1em
    font-weight 700
    color $body-text
    span
      font-weight 600
  textarea
  input
    &:last-of-type
      margin-bottom 0

.modal-header
  min-height 0
  padding 0
  border 0
  .close
    position absolute
    top 15px
    z-index $bottom-layer
    right 15px

.modal
  input[type=submit]
  input[type=button]
    display inline-block

  input[type=submit]
    min-width 150px
    margin-left 5px

.modal-buttons
  float right
