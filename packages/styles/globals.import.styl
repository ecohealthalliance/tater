html
body
  height 100%

body
  font-family inherit

.page-wrap
  position relative
  min-height 100%

.content-wrap
  padding-top 20px
  padding-bottom $footer-height-actual+10

h2
  color $primary

h3
  color $secondary

h4
  color $body-text

h5
  font-weight 400
  color $d-gray

.view-header
  margin-top -20px
  margin-bottom 15px
  padding 20px 0
  +below(1)
    margin-bottom 5px
  h1
    margin-bottom 0
  &.primary-bg
    background lighten($primary, 90%)
    border-bottom 2px solid $primary-light
  &.secondary-bg
    background lighten($secondary, 90%)
    border-bottom 2px solid $secondary-light

a
button
.btn
  transition()
  &:hover
    transition()

a
  color $secondary
  &:hover
  &:focus
    color $primary
  &.with-icon-right
    .fa
      margin-left 3px
  &.with-icon-left
    .fa
      margin-right 3px

.btn
  border-width 2px
  .fa
    vAlign()
    padding 0 0 0 5px
    font-size 110%
    line-height 0

.btn-primary
  makeButton($secondary)

.btn-default
  makeButton($ll-gray, $body-text, true)

.btn-success
  makeButton($confirm)

.btn-danger
  makeButton($primary-strong)

.button-default['disabled']
.btn['disabled']
  background lighten($secondary-light, 20%)
  color $body-text
  text-shadow none

.header-btn
  display inline-block
  margin-left 15px
  +below(1)
    display block
    margin 15px 0 10px 0
    padding 12px
  .fa
    color $d-gray

.toast-top-right-custom
  right 15px
  top $header-height+20
  +below(2)
    right 0
    bottom $footer-height-actual+10
    top auto
    width 100%
    height $header-height

#toast-container
  > div
    +below(2)
      width 100% !important

.col-sm-0
  width 0%

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0

.rm-pad-btm
  padding-bottom 0

.rm-margin-top
  margin-top 0

.rm-margin-btm
  margin-bottom 0

.inline
  display inline-block
  vertical-align middle

.full-width-table
  border-top 1px solid $l-gray
  .table-content-wrap
    border-bottom 1px solid $l-gray
    .container
        padding 15px 0
  td.title
    font-size 120%
    font-weight bold


for $num in 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

for $num in 1 2 3
  .border-btm-{$num}
    addBorder('bottom', $num, $l-gray)

  .border-top-{$num}
    addBorder('top', $num, $l-gray)
