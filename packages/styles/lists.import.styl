.container-list
  padding-left 0
  padding-right 0

.list
  margin-top -15px
  border 1px solid $border-gray
  border-top 0
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  li
    position relative
    border-bottom 1px solid $border-gray
    &:nth-of-type(even)
      background $ll-gray
    &:last-of-type
      border 0
  .list-link
    padding 15px
    display block
    linkTransition()
    color lighten($body-text, 15%)
    &:hover
      background $background-secondary
      text-decoration none
      color $secondary-dark
  .btn-list
    i
      cursor pointer

.list-table
  border 1px solid #DDD
  border-top 0
  margin-top -15px
  margin-bottom 50px
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  .reactive-table
    overflow visible
  .reactive-table-navigation
    padding 0 15px
  .table
    > thead
      background $background-primary
      > tr
        > th
          padding 12px 8px
  tr
    &:last-of-type
      border-bottom 2px solid $border-gray
  .form-group
    margin-bottom 0
  .reactive-table-options
    display none
