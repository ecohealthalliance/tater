$blue = #576E83
$red = #F3837D
$green = #76C5A6

.marketing-page-wrap
  margin-bottom 100px
  h2
  h3
    text-align center
    color #666
    font-weight 600
  h3
    margin-bottom 20px

  section
    margin-bottom 80px

  .action-call
  .video
    padding 15px 25px
    font-size 1.3em

  .action-call
    background $green
    margin-right 10px
    color black
    &:hover
      background lighten($green, 20%)
  .video
    background none
    border-color $green
    color $l-gray
    &:hover
      color white
      background alpha($green, 10%)
    &::before
      @extend .icon
      margin-right 10px
      content '\f144'

  .modal-dialog
    +above(3)
      width 65%
      max-width 800px
  .modal-content
    padding 30px
  .close
    top  8px
    right 8px
    opacity .95

.hero
  min-height 675px
  margin-top -20px
  background $blue

.topic-heading
  margin-bottom 40px

.tag-line
  color white
  font-size 4.5em
  font-weight 300
  line-height 1.2em
  .highlighted
    color $red
  span
    font-weight 400

.hero-text
  padding 130px 0 100px 0
  color white
  font-weight 400
  text-shadow none
  p
    font-size 1.5em

.annotated-docs-img
  max-height 680px

.annotating
  margin-top 240px
  padding-top 350px
  padding-bottom 100px
  background $ll-gray
  position relative

.annotation-interface-img
  position absolute
  top -200px
  width 800px
  left 50%
  transform translate(-50%, 0)

.sub-topic
  img
    max-height 100px

.multi-docs
  background url('../../images/marketing/document-string.svg')
  background-position center center
  height 100px
  width 100%

.sub-topic
  img
    max-height 125px
    margin 0 auto 25px auto
    display block
  p
    font-size 1.2em
    text-align center

.analysis
  margin-top 100px

