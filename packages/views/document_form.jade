template(name="documentForm")
  .container
    .row
      .col-sm-12
        h1 New Document
    .row
      .col-sm-12
        form#new-document-form
          label Title
            input#document-title.form-control(type='string' name='title')
          label Body
            textarea#document-body.form-control(name='body')
          input.btn.btn-primary(type="submit" value="Save")
