template(name="passwordField")
  .at-input.form-group
    label Password
      unless loggingIn
        span.requirements Your password must contain at least #[span 8 characters], including at least #[span one number] and #[span one capital letter].
    input.form-control(type="password" id="at-field-password" name="at-field-password" autocapitalize="none" autocorrect="off")

template(name="passwordFieldConfirm")
  .at-input.form-group
    label Confirm Password
    input.form-control(type="password" id="at-field-password_again" name="at-field-password_again" autocapitalize="none" autocorrect="off")
