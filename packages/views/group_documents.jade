template(name="groupDocuments")
  .group-documents.documents
    .view-header.secondary-bg
      .container
        h1.inline Documents
        if showNewDocumentLink
          a.new-document-link.btn.header-btn.btn-default(href="{{path route='newDocument' params=newDocumentParams}}")
            span Add Document
            i.fa.fa-file-text-o
        p.group-name
          span Group:
          | #{group.name}
    .container
      if documents
        ul.document-list.list-unstyled
          each documents
            li.document
                a(href="{{path route='documentDetail' params=this}}")
                  span.document-title= title
      else
        p No documents have been uploaded.
