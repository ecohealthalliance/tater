template(name="codingKeywords")
  .view-header.primary-bg
    .container
      h1 Code Management

  .container.code-management-container
    .code-list-wrap
      .code-list-header
        h4 Headers
        i.add-code.fa.fa-plus
      .code-list-container
        ul.code-list.list.list-unstyled.level-1
          each headers
            li.code.list-link.code-level-1(class="{{selected 'header'}}")= header
      if currentlySelectedHeader
        .code-details
          h6= currentlySelectedHeader
          .checkbox
            label
              input(type="checkbox")
              | Hide Code

    .code-list-wrap
      unless currentlySelectedHeader
        +curtain
      .code-list-header
        h4 Sub-Headers
        i.add-code.fa.fa-plus
      .code-list-container
        if currentlySelectedHeader
          ul.code-list.list.list-unstyled.level-2
            each subHeaders
              li.code.list-link.code-level-2(class="{{selected 'subHeader'}}")= subHeader
      if currentlySelectedSubHeader
        .code-details
          h6= currentlySelectedSubHeader
          .checkbox
            label
              input(type="checkbox")
              | Hide Code

    .code-list-wrap
      unless currentlySelectedSubHeader
        +curtain
      .code-list-header
        h4 Keywords
        i.add-code.fa.fa-plus
      .code-list-container
        if currentlySelectedSubHeader
          ul.code-list.list.list-unstyled.level-3
            each keywords
              li.code.list-link.code-level-3.not-clickable= keyword
      if currentlySelectedKeyword
        .code-details
          h6= currentlySelectedKeyword
          .checkbox
            label
              input(type="checkbox")
              | Hide Code


template(name="curtain")
  .curtain-white
