template(name="profileEdit")
  .profile-edit
    if currentUser
      if Template.subscriptionsReady
        .view-header.secondary-bg.space-btm-2
          .container
            h1.inline Edit Profile
            a.btn.btn-primary.profile-detail-link.header-btn(href= "{{path route='profileDetail' params=userProfile}}")
              span View Public Profile
              i.fa.fa-user
        .container
          form#edit-profile-form
            .row
              .col-md-5
                .row
                  .col-md-12
                    label
                      span E-mail
                .row
                  .col-md-7
                    span.email
                      span= email
                  .col-md-5
                    .checkbox
                      label
                        input#profile-email-hidden(name="emailHidden" type="checkbox" checked=userProfile.emailHidden)
                        span Hide Email Address
                .row
                  .col-md-12
                    label
                      span Your Name
                      .row
                        .col-md-4
                          input#profile-firstname.form-control(name="firstName" type="text" value=userProfile.firstName placeholder="First")
                        .col-md-3
                          input#profile-middlename.form-control(name="middleName" type="text" value=userProfile.middleName placeholder="Middle")
                        .col-md-5
                          input#profile-lastname.form-control(name="lastName" type="text" value=userProfile.lastName placeholder="Last")
                .row
                  .col-md-12
                    label
                      span Phone
                      input#profile-phonenumber.form-control(name="phoneNumber" type="text" value=userProfile.phoneNumber placeholder="+1 (800) 555-1337")
                .row
                  .col-md-12
                    label
                      span Role
                      input#profile-jobtitle.form-control(name="jobTitle" type="text" value=userProfile.jobTitle placeholder="Job Title")
                label
                  span Biography
                  textarea#profile-bio.form-control(name="bio") #{userProfile.bio}

              .col-md-5
                .row
                  .col-md-12
                    label
                      span Address Line 1
                      input#profile-address1.form-control(name="address1" type="text" value=userProfile.address1 placeholder="Street Address, P.O. Box")
                .row
                  .col-md-12
                    label
                      span Address Line 2
                      input#profile-address2.form-control(name="address2" type="text" value=userProfile.address2 placeholder="Apt, suite, floor, etc.")
                .row
                  .col-md-12
                    label
                      span City
                      input#profile-city.form-control(name="city" type="text" value=userProfile.city)
                .row
                  .col-md-7
                    label
                      span State
                      input#profile-state.form-control(name="state" type="text" value=userProfile.state)
                  .col-md-5
                    label
                      span ZIP
                      input#profile-zip.form-control(name="zip" type="text" value=userProfile.zip)
                .row
                  .col-md-12
                    label
                      span Country
                      input#profile-country.form-control(name="country" type="text" value=userProfile.country)
                .row
                  .col-md-12
                    input.btn.btn-primary(type="submit" value="Save")
    else
      .container
        p Please log in or sign up to continue.
