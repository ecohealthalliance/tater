.pane-container
  @extend .gradient-bottom
  position fixed
  top $header-height
  bottom 0
  left 0
  right 0
  z-index $mid-layer
  .loading
    loading(false)
    position absolute
    top 100px
    transform translate(-50%, 0)
    left 50%

.pane
  position absolute
  top 0
  bottom 0
  width 22.5%
  padding-top 65px
  padding-bottom 75px
  z-index $mid-layer
  overflow-y auto
  background white
  .text-center
    padding 0 15px

.pane-l
  left 0

.pane-m
  width 55%
  left 22.5%
  border-left 2px solid lighten($primary-light, 50%)
  border-right 2px solid lighten($primary-light, 50%)

.pane-r
  right 0

.pane-head
  position absolute
  min-height 65px
  max-height 65px
  overflow hidden
  z-index $top-layer
  width 22.5%
  padding 15px
  border-bottom 2px solid lighten($primary-light, 70%)
  input
    margin-bottom 0
  h1
    font-weight 800
  h1
  h2
    centerVertically()
    body-font()
    font-size 25px
  h2
    font-size 20px
    color $primary-light

.pane-head-l
  left 0

.pane-head-m
  width 55%
  left 22.5%
  padding 15px 20px 10px 20px
  border-left $border
  border-right $border
  background $sub-header-BG

.pane-head-m-options
  display flex
  justify-content flex-end
  align-items center

.pane-head-r
  right 0

.pane-head-l
.pane-head-r
  background lighten($sub-header-BG, 50%)


.pane-actions
  display flex
  align-items center
  margin-bottom 15px
  padding-top 10px
  padding-top 10px
  padding-bottom 10px
  padding-left 15px
  padding-right 15px
  border-bottom 1px solid lighten($border-color, 70%)
  &.pane-actions-middle
    padding-left 20px
    padding-right 20px
  &.align-right
    justify-content flex-end
    button
      flex-grow 0
  button
    flex-grow 1
    margin 0
    line-height 1
    color $primary-light
    font-size 12px
    &:hover
      color darken($primary-light, 40%)
    &:disabled
      color desaturate(lighten($primary-light, 70%), 20%)
      cursor not-allowed
  i
    font-size 13px
    margin-right 4px
    +below(1000px)
      font-size 20px

.connection-status
  position absolute
  top $header-height
  left 0
  right 0
  visible(false)
  layerCosmos(10)
  padding 15px
  background $connection-warning
  text-align center
  text-shadow none
  font-weight 600
  min-height $header-height+1
  @extend .light-shadow
  border-bottom 5px solid darken(alpha($warning, 50%), 20%)
  .fa
    color darken($warning, 30%)
.reconnect
  makeButton(alpha(#FFFFFF, 75%), $body-text, true)
  padding-top 5px
  padding-bottom 5px
  margin 10px auto 0 auto
  border 2px solid $secondary
  font-size .95em
  &:hover
  &:focus
    background white
    color black
    border 2px solid $secondary

.no-header
  .connection-status
    top 0
