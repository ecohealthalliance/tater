$blue = #576E83
$red = #F3837D
$green = #76C5A6

.marketing-page-wrap
  margin-bottom 100px
  h2
  h3
    text-align center
    color #666
    font-weight 600
  h3
    margin-bottom 20px

  section
    margin-bottom 80px
    &:first-of-type
      margin-bottom 0
      +above(2)
        margin-bottom 80px
    &:nth-of-type(3)
      margin-bottom 30px
    &:last-of-type
      margin-bottom 0

  .action-call
  .action-call-secondary
    padding 15px 25px
    font-size 1.3em
    width 100%
    margin-bottom 20px
    +above(3)
      width auto
  .action-call
    background $green
    margin-right 10px
    color black
    text-shadow none
    &:hover
      background lighten($green, 20%)
  .action-call-secondary
    background none
    border-color $green
    color $l-gray
    &.watch
      display none
      +above(2)
        display inline-block
    &:hover
      color white
      background alpha($green, 10%)
    &::before
      @extend .icon
      margin-right 10px
      content '\f144'
  .modal-dialog
    +above(3)
      width 65%
      max-width 800px
  .modal-content
    padding 30px
  .close
    top  8px
    right 8px
    opacity .95

.hero
  padding 0 20px
  background $blue
  +above(4)
    min-height 650px
    padding 0

.topic-heading
  padding 0 10%
  margin-bottom 40px
  +mobile()
    padding 0 2%

.tag-line
  color white
  font-size 2.5em
  font-weight 300
  line-height 1.2em
  +above(2)
    font-size 3em
  +above(3)
    font-size 4.5em
  .highlighted
    color $red
  span
    font-weight 400

.hero-text
  padding 50px 15px 100px 15px
  color white
  font-weight 400
  text-shadow none
  +above(3)
    padding-top 100px
  p
    font-size 1.25em
    +above(3)
      font-size 1.5em

.mobile-video
  margin -60px 20px 40px 20px
  box-shadow 0 -5px 10px rgba(100,100,100,0.3)
  +above(2)
    display none

.annotated-docs-img-wrapper
  display none
  +above(4)
    display block
    background url(../../images/marketing/annotated-docs.svg) no-repeat
    min-height 600px
    background-size auto
    background-position center center

.annotating
  margin-top 240px
  padding-top 50px
  padding-bottom 50px
  background darken($ll-gray, 2%)
  position relative
  +between(2,3)
    padding-top 225px
  +above(3)
    padding-top 350px
    padding-bottom 30px

.annotation-interface-img
  position absolute
  top -200px
  left 50%
  transform translate(-50%, 0)
  background url(../../images/marketing/annotation-interface.svg) no-repeat
  width 90%
  height 500px
  margin-bottom 30px
  +above(3)
    width 800px
    height 452px
    background url(../../images/marketing/annotation-interface_animated.gif) 800px 452px
    background-size cover
    background-position center center
    border 10px solid white
    border-radius 5px

.sub-topic
  margin-bottom 60px
  padding 0 35px
  text-align center
  +between(3,4)
    margin-bottom 20px
    padding 0 25px
  +above(4)
    padding 0 65px

  img
    max-height 100px
    margin-bottom 20px
    +above(3)
      max-height 125px
  p
    font-size 1.2em
    text-align center

.multi-docs
  background url(../../images/marketing/document-string.svg)
  background-size auto
  background-repeat no-repeat
  background-position center center
  height 130px
  width 100%
  +above(3)
    background-size auto
    height 100px

.analyze
  margin-bottom 0
  +above(2)
    margin-bottom inherit

.analysis
  +above(2)
    margin-top 100px
  .sub-topic
    +between(1000px,1400px)
      padding 0 25px

.info
  text-align center
  p
    margin-bottom 8px
    color $d-gray
  .action-call
    width 40%
    margin-bottom 30px
    +below(2)
      width 100%
  .action-call-secondary
    color $d-gray
    padding-top 10px
    padding-bottom 10px
    font-size 1em
    border-color $m-gray
    &:hover
      color $body-text
      background-color $ll-gray
    &::before
      content '\f003'
    +below(2)
      width 50%
