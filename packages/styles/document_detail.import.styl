$colors = rgba(222, 164, 89, 1) rgba(246, 122, 115, 1) rgba(105, 191, 158, 1) rgba(123, 173, 210, 1) rgba(173, 160, 183, 1)

.document-detail-container
  position absolute
  min-height 100%
  height 100%
  top $header-height
  bottom 0
  left 0
  right 0

.coding-container
.annotation-container
.document-container
  position absolute
  top 0
  bottom $footer-height
  width 20%
  overflow-x scroll

.coding-container
  left 0
  border-right 2px solid $background-primary

.search-container
  padding 15px

.annotation-container
  padding 15px

.code-header
.code-sub-header
.code-keyword
  > span
    cursor pointer

.code-header
.code-sub-header
  position relative
  span
    padding 2px 15px 2px 5px
  i
    position absolute
    left 15px
    top 2px
    &.down
    &.up
      @extend .icon
    &.down
      &::before
        content '\f13a'
    &.up
      &::before
        content '\f139'
    &:hover
      color $secondary-dark
      transition .2s ease-in-out

.code-header > span
.code-sub-header > span
.code-keyword
  border-top-left-radius 3px
  border-bottom-left-radius 3px

.code-header
  margin-bottom 5px
  font-size 18px
  font-weight 800
  color $body-text
  span
    display block
    overflow hidden
    text-overflow ellipsis
  > span
    margin-left 35px
  for $color, $key in $colors
    &.code-header-{$key+1}
      > span
        background-color $color
      .code-sub-header
        > span
          padding-left 5px
          background-color transparent
          transition .1s ease-in-out
          &.showing
          &:hover
            background-color lighten($color, 35%)
          &.showing
            transition .1s ease-in-out
        .code-keyword
          border-bottom 1px solid lighten($color, 80%)
          transition .1s ease-in-out
          &:last-of-type
            border 0
          &.showing
          &:hover
            background-color lighten($color, 55%)
            transition .1s ease-in-out

.code-sub-headers
.code-keywords
  margin 5px 0 15px 0

.code-sub-header
  padding-left 53px
  margin-bottom 2px
  font-size 15px
  font-weight 600
  span
    padding-left 5px
  i
    left 38px

.code-keywords
  padding-left 10px

.code-keyword
  font-size 13px
  font-weight 400

.document-heading
  padding 15px 5% 10px 5%
  background $background-primary
  h1
    body-font()
    font-size 25px

.document-container
  width 60%
  left 20%
  padding 0
  line-height 1.75em

.document-body
  padding 20px 5%
  pre
    background none
    border 0
    padding 0
    text-align left
    line-height 1.6em
    white-space pre-wrap
    word-wrap break-word
    word-break break-word
    body-font()
    font-size 1em
    &::selection
      background-color $selection-color
      color $background-primary

.annotation-container
  right 0
  border-left 2px solid $background-primary

