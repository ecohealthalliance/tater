template(name="groupDetail")
  .group-detail
    .container
      h1 Group: #{group.name}
      .row
        .col-sm-10
          +paragraphText text=group.description
      .row
        .col-sm-10
          a.new-document-link.btn.btn-default(href="{{path route='newDocument' params=newDocumentParams}}") New Document

      .row
        .col-sm-10
          each documents
            p= title

  +userForm groupId=group._id
