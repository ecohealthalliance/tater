template(name="editCodingKeywords")
  section.rm-pad-top
    .view-header.secondary-bg
      .container
        h1.inline Coding Keywords
        a.btn.btn-primary.new-user-link.header-btn.add-keyword(data-toggle="modal" data-target="#add-keyword-modal")
          span Add Keyword
          i.fa.fa-plus
  .table-wrap.keyword-table
    .container.container-list
      +reactiveTable collection=keywordCollection settings=settings
  #add-keyword-modal.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          form#new-user-form
            label Header
              input.form-control(name="header")
            label Sub-header
              input.form-control(name="subHeader")
            label Keyword
              input.form-control(name="keyword")
            input.btn.btn-primary(type="submit" value="Add Keyword")
            input.btn.btn-default.cancel(type="button" value="Cancel" data-dismiss="modal")
  #remove-keyword-modal.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          h3#myModalLabel Confirmation
          p Remove {{keywordToDelete.keyword}}?
        .modal-footer
          button.btn(data-dismiss='modal', aria-hidden='true') Close
          button.btn.btn-primary.confirm-remove-keyword Remove
