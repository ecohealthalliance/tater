.documents
  .group-name
    display block
    margin-top 10px
    color $primary-light
    font-weight 400
    font-style italic
    margin 10px 0 0 0
    span
      font-style normal
      font-weight 700

.annotation-list
.search-list-result
  list-style none

.document-list
  min-height 460px
  border-top 0
  +below(2)
    margin-top 0
  li
    position relative
    &
    &:last-of-type
      border 1px solid $border-gray
      border-top 0
      overflow hidden
    &:last-of-type
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
    &:hover
      background $background-secondary
      transition()
      .doc-options
        background $background-secondary
        color $m-gray

  .list-link
    padding-right 60px

  .document-title
  .document-group
    truncateString()

  .document-title
    width 53%
    font-size 1.1em
    float left
    padding-left 10px

  .document-group
    position relative
    width 40%
    float right
    text-align right
    color darken($m-gray, 10%)
    font-size 95%
    font-style italic

.annotation-state
  float left
  overflow hidden
  text-align right
  color $m-gray
  &:hover
    color $primary

.doc-options
.doc-options-buttons
  position absolute
  top 0
  bottom 0
  right 0
  margin-bottom 0
  min-width 50px
  font-size 1.5em
  color $m-gray

$doc-options-border-color = lighten($l-gray, 20%)

.doc-options
  right 0
  color $l-gray
  z-index $mid-layer
  background white
  border-left 1px solid $doc-options-border-color
  &:hover
    color $d-gray
    background $ll-gray
  &.active
    background $l-gray !important
    color $d-gray !important

.doc-options-buttons
  visibility hidden
  opacity 0
  min-width 103px
  right 0
  display flex
  justify-content flex-end
  align-items center
  flex-direction row-reverse
  z-index $bottom-layer
  background white
  transition .1s
  border-left 3px solid $m-gray
  &.active
    right 50px
    visibility visible
    opacity 1
    background $m-gray
  button
    &:last-child
      border-left 0

.delete-document-button
.mturk-enable-button
  height 100%
  margin-bottom 0
  min-width 50px
  font-size 100%
  background white
  border-left 1px solid $doc-options-border-color
  color $d-gray
  &:hover
    background-color $confirm
    color white
  &:active
    background-color darken($confirm, 10%)

.mturk-enable-button
  flex-grow 1
  padding-left 10px
  padding-right 10px
  font-size .85em
  span
    font-size .7em
  span
  i
    vertical-align middle


.delete-document-button
  &:hover
    background-color $delete
  &:active
    background-color darken($delete, 10%)


.document-filtration
  min-width 70%
  display flex
  flex-wrap nowrap
  justify-content flex-end
  +below(1)
    min-width 98%
    flex-wrap wrap
    margin 0 auto

.document-sorting
  position relative
  margin-right 15px
  +below(1)
    flex-grow 1
    margin-bottom 10px
  i
    font-size 1.75em
    padding-top .1em

  .dropdown-menu
    right 0
    top 40px
    left auto
    white-space nowrap
    li
      padding 5px 15px
      border-bottom 1px solid $l-gray
      pointer()
      &:last-of-type
        border-bottom transparent
      &:hover
        background $l-gray
        color black
      .fa
        font-size 1em
        padding-top 0
        color $m-gray
  .dropdown-toggle
    border-width 2px
    border-width-left 0
    i
      padding-top 0
  .btn-group
    .btn
      padding-top 5px
      padding-bottom 5px

.document-search-wrap
  min-width 250px
  +below(1)
    flex-grow 1
    margin-bottom 10px
  i
    position absolute
    top 50%
    left 10px
    transform translate(0,-50%)
    color $d-gray

.current-sorting
  color $body-text
  background white
  border 2px solid #CCC
  .fa
    vertical-align initial
    color $d-gray
  &:hover
    background $l-gray
  &:active
  &:focus
  &:focus:active
    outline 0
    box-shadow none
    text-shadow none
    background white
    border-color $secondary
