template(name="groups")
  if currentUser
    .view-header.secondary-bg
      .container
        h1.inline Groups
        a.btn.btn-primary.new-group-link.header-btn(href="{{path route='newGroup'}}")
          span Create
          i.fa.fa-users
    .container.container-list
      if groups
        ul.list.group-list.list-unstyled
          each groups
            li.group
                a.list-link(href="{{path route='groupDetail' params=this}}")
                  span.group-name= name
                a.add-user.btn-list(data-toggle="modal" data-target="#add-group-user-modal")
                  i.fa.fa-user-plus
    #add-group-user-modal.modal.fade(tabindex="-1" role="dialog")
      .modal-dialog
        .modal-content
          .modal-header
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              i.fa.fa-times-circle
          .modal-body
            +userForm group=group
  else
    .container
      .row
        .col-sm-12
          p Please log in or sign up to continue.

