template(name="codingKeywords")
  input.code-search.form-control(type="text" placeholder="Search")
  ul.list-unstyled
    if Template.subscriptionsReady
      each header
        li.code-header
          i.fa.fa-caret-down
          span.selectable-code(data-id=this._id)= this.header
          ul.code-sub-headers.list-unstyled
            each subHeader this.header
              li.code-sub-header
                i.fa.fa-caret-down
                span.selectable-code(data-id=this._id)= this.subHeader
                ul.code-keywords.list-unstyled
                  each keywords this.subHeader
                    li.code-keyword
                      span.selectable-code(data-id=this._id)= this.keyword
