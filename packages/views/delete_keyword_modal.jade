template(name="deleteKeywordModal")
  #confirm-delete-keyword-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          h3#keywordModal Confirmation
          p Delete keyword '#[span#keywordLabel]'?
        .modal-footer
          button.btn.btn-default(data-dismiss='modal' aria-hidden='true') Close
          button.btn.btn-danger#confirm-delete-keyword(data-dismiss='modal' aria-hidden='true') Delete