template(name="groups")
  if isAdmin
    +adminNav page='groups'
    .container
      .row
        .groups-container
          .table-header.clearfix
            h2.pull-left Document Groups
              a.help-link(href="{{path route='help?topic=document-groups'}}")
                +tooltipIcon icon='question-circle' placement='right'
            a.btn.btn-primary.new-group-link.secondary-header-btn.pull-right(data-toggle="modal" data-target="#add-group-modal")
              i.fa.fa-plus
              span Add Document Group
          .container-list
            if Template.subscriptionsReady
              if groups
                .group-list.list-table.groups-table.no-filter.table-wrap
                  +reactiveTable collection=groups settings=settings filters=filters
            else
              .loading.center-v
    +userModal(group=selectedGroup)
    +groupModal
