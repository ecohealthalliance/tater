if match($footer-value, 'light')
  $eha-logo = 'eha-logo-white'
else
  $eha-logo = 'eha-logo-dark'

footer
  position absolute
  bottom 0
  height $footer-height
  width 100%
  border-top 2px solid $primary
  z-index $mid-layer
  background $footer-BG
  +below(1)
    height $footer-height
    width 100%
    padding-top 10px
  h1
  h2
    margin 0

  .logos
    text-align center

  .logo
    p
      display inline-block
      color $l-gray
      font-size 11px
    +below(1)
      padding 0

  .eha
    margin-top $footer-padding+8px
    +below(1)
      margin-top 0
    h2
      bg('../../images/'+$eha-logo, 220px, 54px,'png')
      display inline-block
