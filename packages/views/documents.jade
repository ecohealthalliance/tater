template(name="documents")
  .documents
    .view-header.secondary-bg
      .container
        h1 All Documents
    .container.container-list
      if documents
        ul.list.document-list.list-unstyled
          each documents
            li.document
                a.list-link.clearfix(href="{{path route='documentDetail' params=this}}")
                  span.document-title= title
                  span.document-group= groupName
                  if annotated
                    span.document-annotated= annotated
      else
        p No documents have been uploaded.
