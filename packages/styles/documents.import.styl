.document-list
  margin-top -15px
  border 1px solid $border-gray
  border-top 0
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  li
    position relative
    border-bottom 1px solid $border-gray
    &:last-of-type
      border 0
  a
    padding 15px
    display block
    linkTransition()
    &:hover
      background $ll-gray
      text-decoration none

  .document-title
    padding-right 22%
    font-size 1.2em
    font-weight 700

  .document-group
    centerVertically()
    right 15px
    width 20%
    truncateString()
    text-align right
    color darken($m-gray, 10%)
    font-style italic

.group-name
  display block
  margin-top 10px
  color $primary-light
  font-weight 400
  font-style italic
  margin 10px 0 0 0
  span
    font-style normal
    font-weight 700

