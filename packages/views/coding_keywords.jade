template(name="codingKeywords")
  .code-search-container
    input.code-search.form-control(type="text" placeholder="Search Code Keywords")
  .coding-container
    ul.list-unstyled.code-list
      if Template.subscriptionsReady
        unless filtering
          each headers
            unless ../accessCode
              li.code-header(class='code-header-#{color}')
                i.up
                span.selectable-code(data-id=_id)
                  span.icon.fa(class=icon)
                  span.header-name= header
                ul.code-sub-headers.list-unstyled
                  each subHeaders header
                    li.code-sub-header
                      i.down
                      span.selectable-code(data-id=_id)= subHeader
                      ul.code-keywords.list-unstyled.hidden
                        each keywords subHeader
                          li.code-keyword
                            span.selectable-code(data-id=_id)= keyword
            else
              li.code-header.count(class='code-header-#{color}')
                span.header-name.selectable-code(data-id=_id)= header
        else
          ul.filteredCodes.list-unstyled
            each filteredCodes
              li.filter-result(class='code-#{color}')
                span.selectable-code(data-id=_id)=code
            else
              .no-results
                i.fa.fa-search
                p Sorry, no codes found

