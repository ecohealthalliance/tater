// COLORS
$primary              = rgba(133, 95, 69, 1)
$primary-dark         = darken($primary, 20%)
$primary-light        = lighten($primary, 20%)
$primary-trans        = rgba($primary, 0.9)
$primary-strong       = rgba(55, 54, 44, 1)
$primary-strong-light = rgba(248, 237, 230, 1)
$primary-trans-strong = rgba($primary-strong, 0.9)
$primary-subtle       = lighten($primary, 90%)
$primary-dark         = darken($primary, 20%)
$primary-light        = lighten($primary, 20%)
$secondary            = rgba(70, 178, 126, 1)
$secondary-subtle     = lighten($secondary, 90%)
$secondary-dark       = darken($secondary, 20%)
$secondary-light      = lighten($secondary, 20%)
$secondary-trans      = rgba($secondary, 0.9)

$background-primary   = lighten(desaturate($primary,40%), 90%)
$background-secondary = lighten(desaturate($secondary,40%), 90%)

$dd-gray              = #333
$d-gray               = #999
$ll-gray              = #f9f9f9
$l-gray               = #e7e7e7
$m-gray               = #CCC
$white-trans          = rgba(255,255,255,.7)

$body-text            = $dd-gray

$btn-default          = $secondary
$confirm              = rgba(103, 169, 104, 1) // Green
$deny                 = rgba(219, 82, 75, 1) // Red
$delete               = $deny
$warning              = rgba(242, 173, 64, 1)
$connection-warning = alpha(lighten($warning, 10%), 80%)

$header-BG            = white
$footer-BG            = white
$footer-value         = 'dark'
$nav-hover            = $secondary
$header-link-color    = $primary
$sub-header-BG        = lighten(desaturate(alpha($background-primary, 95%),100%),20%)


$border-gray          = #DDD
$mapBG                = #CDD2D4

$selection-color      = rgba(255, 255, 118, 1)

$annotation-colors = rgba(248, 125, 112, 1) rgba(250, 146, 87, 1) rgba(251, 201, 100, 1) rgba(153, 200, 149, 1) rgba(94, 180, 179, 1) rgba(102, 154, 205, 1) rgba(198, 148, 198, 1) rgba(172, 121, 104, 1)

$border-color = lighten($primary-light, 50%)
$border = 2px solid $border-color
$highlight-color = lighten($primary-light, 70%)


// HEADER & FOOTER
$header-height                   = 55px
$brand-width                     = 113px
$brand-height                    = 40px
$brand-top-margin                = (($header-height - $brand-height) / 2) - 1
$header-text-shadow              = false

$footer-height                   = 75px
$footer-logo-height              = 60px
$footer-padding                  = ($footer-height - $footer-logo-height) / 2
$footer-height-actual            = $footer-height
$footer-height-mobile-actual     = $footer-height*2
$footer-height                   = $footer-height+$footer-padding+5
$footer-height-mobile            = $footer-height*2

$header-positioning-space        = $header-height
$footer-positioning-space        = $footer-height
$header-positioning-space-mobile = $header-height-mobile
$footer-positioning-space-mobile = $footer-height-mobile

// Z-index layers
$cosmos-layer = 3000
$modal-layer = 2000
$top-layer = 1000
$mid-layer = 100
$bottom-layer = 10
$page-layer = 0

//Fonts
$open-sans = 'Open Sans', sans-serif

$header-font = $open-sans
$body-font = $open-sans

// =============================
//  Vendor default overrides
// =============================

// Rupture Scale (Follows Bootstrap)
rupture.scale = 0        480px        768px      992px      1200px
//              └────┬────┘ └────┬────┘ └────┬────┘ └────┬────┘
//                   1           2           3           4

// Typographic settings
$line-height-ratio  = 1.75
$header-ratio       = $golden
$body-font          = $body-font
$body-font-weight   = 400
$body-color         = $body-text
$header-font        = $header-font
$header-font-weight = 700
$header-color       = $primary
$min-font           = 12px
$max-font           = 16px
$min-width          = 768px
$max-width          = 1200px
$vertical-rhythm    = false
typographic()
