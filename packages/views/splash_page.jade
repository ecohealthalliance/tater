template(name="splashPage")
  if currentUser
    .fluid-container
        .view-header.primary-bg
          .container
            .row
              .col-sm-8
                h4 Add a New Document
              if documentsExist
                .col-sm-4
                  h4 Recent Documents
        .container
          .row
            .col-sm-8.space-top-2.new-document-splash
              +documentForm showDropZone=false
            .col-sm-4
              if documentsExist
                if Template.subscriptionsReady
                  ul.recent-documents.list.document-list.list-unstyled
                    each recentDocuments
                      li.document
                        a.list-link(href="{{path route='documentDetail' params=this}}")= title
                    li
                      a.view-all.list-link(href="{{path route='documents'}}") View All Documents
                else
                  .loading
  else
    +marketingPage
