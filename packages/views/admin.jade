template(name="admin")
  if isAdmin
    .fluid-container
      .view-header.primary-bg
        .container
          h1 Admin
      .container
        .row
          .col-sm-12
            .groups-container
              .table-header.clearfix
                h2.pull-left Document Groups
                  a.help-link(href="{{path route='help?topic=document-groups'}}")
                    +tooltipIcon icon='question-circle' placement='right'
                a.btn.btn-primary.new-group-link.header-btn.pull-right(href="{{path route='newGroup'}}")
                  i.fa.fa-plus
                  span Add Document Group
              +groups
            .users-container
              .table-header.clearfix
                h2.pull-left Users
                  a.help-link(href="{{path route='help?topic=users'}}")
                    +tooltipIcon icon='question-circle' placement='right'
                a.btn.btn-primary.new-user-link.header-btn.add-admin.pull-right(data-toggle="modal" data-target="#add-user-modal")
                  i.fa.fa-user-plus
                  span Add User
              +users
            +userModal(group=selectedGroup)
