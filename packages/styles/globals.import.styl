html
body
  height 100%

body
  font-family inherit

.page-wrap
  position relative
  min-height 100%

.content-wrap
  padding-top 20px
  padding-bottom $footer-height-actual+10

h2
  color $primary

h3
  color $secondary

h4
  color desaturate($primary, 20%)

h5
  font-weight 400
  color $d-gray

.view-header
  margin-top -20px
  margin-bottom 15px
  padding 20px 0
  +below(1)
    margin-bottom 5px
  h1
    margin-bottom 0
    text-shadow 0 1px 0 rgba(255,255,255,.8)
  &.primary-bg
    background $background-primary
  &.secondary-bg
    background $background-secondary

a
button
.btn
  transition()
  &:hover
    transition()

a
  color $secondary
  &:hover
  &:focus
    color $primary
  &.with-icon-right
    .fa
      margin-left 3px
  &.with-icon-left
    .fa
      margin-right 3px

.btn
  border-width 2px
  .fa
    vAlign()
    padding 0 0 0 5px
    font-size 110%
    line-height 0

.btn-primary
  makeButton($secondary)

.btn-default
  makeButton($m-gray, $body-text, true)

.btn-success
  makeButton($confirm)

.btn-danger
  makeButton($primary-strong)

.button-default['disabled']
.btn['disabled']
  background lighten($secondary-light, 20%)
  color $body-text
  text-shadow none

.header-btn
  display inline-block
  margin-left 15px
  +below(1)
    display block
    margin 15px 0 10px 0
    padding 12px

.toast-top-right-custom
  right 15px
  top $header-height+20
  +below(2)
    right 0
    bottom $footer-height-actual+10
    top auto
    width 100%
    height $header-height

.toast-bottom-center
  bottom -7px
  left 50%
  transform translate(-50%, 0)

#toast-container
  > div
    +below(2)
      width 100% !important

.col-sm-0
  width 0%

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0

.rm-pad-btm
  padding-bottom 0

.rm-margin-top
  margin-top 0

.rm-margin-btm
  margin-bottom 0

.inline
  display inline-block
  vertical-align middle

.full-width-table
  margin-top -15px
  +below(1)
    margin-top -5px
  border-top 1px solid $l-gray
  .table-content-wrap
    border-bottom 1px solid $l-gray
    .container
        padding 15px 0
  td.title
    font-size 120%
    font-weight bold
  .controls
    text-align right


for $num in 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

for $num in 1 2 3
  .border-btm-{$num}
    addBorder('bottom', $num, $l-gray)

  .border-top-{$num}
    addBorder('top', $num, $l-gray)

.table > tbody > tr > td
  vertical-align middle

.reactive-table
  padding-left 0
  padding-right 0
  border-radius 5px
  overflow hidden
  border table-border
  tbody tr
    cursor pointer
  .controls
    text-align right

.reactive-table-columns-dropdown
  button
    text-shadow none
  width auto
  padding 0
  a
    position relative
  label
    white-space initial
    padding-left 25px
    margin 0
  input
    position absolute
    left 15px

.reactive-table-options
  .dropdown-toggle
    &::before,
    &::after
      vAlign()
    &::before
      @extend .icon
      content '\f0db'
      padding-right 5px
      font-size 16px

.reactive-table-navigation
  label
    display inline-block
  .previous-page
  .next-page
    font-size 150%
    line-height 0

.rows-per-page
.page-number
  span
    display inline-block
    padding 0 1px
    margin 0
    font-weight normal
  .page-number-count
  .rows-per-page-count
  .form-control
    font-weight bold
  .form-control
    margin 0
    text-align center
    font-weight bold
