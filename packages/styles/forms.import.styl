select.form-control
input.form-control
textarea.form-control
  border 2px solid $m-gray
  font-size 14px
  font-weight normal
  &:focus
    outline 0
    box-shadow none
    border-color $secondary

textarea#document-body
  min-height 300px

input[type="submit"]
  margin 20px 0
  font-size 1.2em !important
  font-weight 400 !important
  +above(1)
    padding-left 20px
    padding-right 20px
    font-size inherit
  +mobile()
    width 100%
    padding 12px
    font-size 110%

form
  .form-group
    &:last-of-type
      margin 0
  textarea
    &:last-child
      margin-bottom 0

.form-group
  margin-bottom 15px

label
  margin-bottom 5px
  span
    display block
    margin-bottom 5px

  .requirements
    color $d-gray
    font-size 90%
    font-weight normal
    span
      display inline
      font-weight 600

  .description
    color $d-gray
    font-weight normal
    font-size 95%
    margin-bottom 10px
    margin-top -3px

textarea
  min-height 200px

textarea
select
  margin-bottom 15px

.checkbox
  label
    span
      font-weight bold

.required-text
  color $d-gray
  font-size 110%
  span
    color $deny
    font-weight bold
    font-size 15px

.required
  &::after
    content '*'
    display inline-block
    color $deny
    padding-left 2px

.drop-zone-active
  background $background-secondary
  border-style solid
  border-color $secondary

.drop-zone-container
  position relative
  padding-right 0
  min-height 300px

.drop-zone
  pointer()
  border 2px dotted $m-gray
  border-radius 6px
  background $ll-gray
  text-align center
  font-weight normal
  &:hover
    @extend .drop-zone-active
    .fa
      color $secondary
  &:active
    background darken($background-secondary, 5%)
  +above(4)
    min-height 300px
  input
    display inline
    outline none
    max-width 100%
    display none
  &.active
    @extend .drop-zone-active
  .fa
    margin-bottom 20px
    font-size 5em
    color $l-gray

.drop-zone-content
  centerVertically()
  padding 30px

.or-container
  position relative
  text-align center
  padding 0
  min-width 100%
  p
    text-align center
    font-weight bold
    margin 1.25em 0
  +above(4)
    min-height 300px
    min-width 4%
    p
      centerVertically()
      width 100%
      margin 0

.clear-input
  color $m-gray
  pointer()
