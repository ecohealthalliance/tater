template(name="profileDetail")
  .view-header.primary-bg.space-btm-2
    .container
      if itsYou
        h1.inline Your Profile
        a.btn.btn-primary.profile-detail-link.header-btn(href= "{{path route='profileEdit' params=userProfile}}")
          span Edit
          i.fa.fa-edit
      else
        h1.inline User Profile

  .container.profile-detail

    h2= userProfile.fullName
    p.job-title.rm-margin-btm= userProfile.jobTitle
    .row.space-top-2
      .col-sm-4
        ul.profile-name-title.space-btm-2.list-unstyled
          if userProfile.emailAddress
            unless userProfile.emailHidden
              li
                i.fa.fa-envelope.icon-left
                a(href="mailto:#{userProfile.emailAddress}")
                  span= userProfile.emailAddress
          if userProfile.phoneNumber
            li
              i.fa.fa-phone.icon-left
              a(href="tel:#{userProfile.phoneNumber}")
                span= userProfile.phoneNumber

      if userProfile.address1
        .col-sm-10
          h4
            i.fa.fa-location-arrow
            | Address
          ul.list-unstyled.profile-address
            li= userProfile.address1
            if userProfile.address2
              li.space-btn-05= userProfile.address2
            li #{userProfile.city}, #{userProfile.state} #{userProfile.zip}
            li #{userProfile.country}
