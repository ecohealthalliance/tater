$blue = #576E83
$red = #F3837D
$green = #76C5A6

.marketing-page-wrap
  margin-bottom 100px
  h2
  h3
    text-align center
    color #666
  h3
    margin-bottom 20px

  section
    margin-bottom 80px

.hero
  min-height 675px
  margin-top -20px
  background $blue

.topic-heading
  margin-bottom 40px

.tag-line
  color white
  font-size 3em
  span
    color $red

.hero-text
  padding 220px 0 100px 0
  color white
  font-weight 400

.annotated-docs-img
  max-height 680px

.annotating
  margin-top 240px
  padding-top 350px
  padding-bottom 100px
  background $ll-gray
  position relative

.annotation-interface-img
  position absolute
  top -200px
  width 800px
  left 50%
  transform translate(-50%, 0)

.sub-topic
  img
    max-height 100px

.multi-docs
  background url('../../images/marketing/document-string.svg')
  background-position center center
  height 100px
  width 100%

.sub-topic
  img
    max-height 125px
    margin 0 auto 25px auto
    display block
  p
    font-size 1.2em
    text-align center

.analysis
  margin-top 100px

