template(name="documents")
  .document-detail-container
    {{> codingKeywords viewMode='alldocs' selectedAnnotations=selectedAnnotations}}
    .document-heading
      if codesSelected
        h1 Document Annotations By Code Keyword
      else
        h1 All Documents  
    .document-container
      if codesSelected
        .annotations-selected-container
          ul.annotation-list.search-list-result
            each searchResults
              li
                b
                  span.label.label-default
                    span= code.codeKeyword.header
                    span= code.codeKeyword.subHeader
                    span= code.codeKeyword.keyword
                    span.badge.dismiss-selected(data-id='#{code.codeKeyword._id}') X
                ul.annotation-result-list
                  each this.docs
                    li
                      a(href="{{path route='documentDetail' params=this}}")
                        span.document-title= title
                      ul.annotation-result-list
                        each annosInDoc this ../codeId
                          li
                            span [
                            span= startOffset
                            span -
                            span= endOffset
                            span ]
                            span= annoText

      else if documents
        ul.document-list.list-unstyled
          each documents
            li.document
                a(href="{{path route='documentDetail' params=this}}")
                  span.document-title= title
                  span.document-group= groupName
      else
        p No documents have been uploaded.
