.documents
  .group-name
    display block
    margin-top 10px
    color $primary-light
    font-weight 400
    font-style italic
    margin 10px 0 0 0
    span
      font-style normal
      font-weight 700
  .document-list-container
    div, h4
      display inline

.annotation-list
.search-list-result
  list-style none

.headers
  h4
    cursor pointer
  .title-header
    width 52%
    float left
    padding-left 10px
  .date-header
    float left
    width 36%

.document-list
  min-height 460px
  border-top 0
  +below(2)
    margin-top 0
  li
    position relative
    &
    &:last-of-type
      border 1px solid $border-gray
      border-top 0
    &:last-of-type
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
    &:hover
      background $background-secondary

  .list-link
    padding-right 60px

  .document-title
  .document-group
    truncateString()

  .document-title
    width 53%
    font-size 1.1em
    float left
    padding-left 10px

  .document-group
    position relative
    width 40%
    float right
    text-align right
    color darken($m-gray, 10%)
    font-size 95%
    font-style italic

.annotation-state
  float left
  overflow hidden
  text-align right
  color $m-gray
  &:hover
    color $primary

.delete-document-button
  position absolute
  top 0
  bottom 0
  right 0
  margin-bottom 0
  width 50px
  font-size 1.5em
  color $m-gray
  &:hover
    background-color $delete
    color white
  i
    centerPosition()

.document-filtration
  min-width 50%
  display flex
  // align-content flex-end center
  flex-wrap nowrap
  justify-content flex-end

.document-sorting
  position relative
  margin-right 15px
  i
    font-size 1.75em
    padding-top .1em

  .dropdown-menu
    right 0
    top 40px
    left auto
    white-space nowrap
    li
      padding 5px 15px
      border-bottom 1px solid $l-gray
      pointer()
      &:last-of-type
        border-bottom transparent
      &:hover
        background $l-gray
        color black
      .fa
        font-size 1em
        padding-top 0
        color $m-gray
  .dropdown-toggle
    border-width 2px
    border-width-left 0
    i
      padding-top 0
  .btn-group
    .btn
      padding-top 5px
      padding-bottom 5px

.document-search-wrap
  min-width 250px
  i
    position absolute
    top 50%
    left 10px
    transform translate(0,-50%)
    color $d-gray

.current-sorting
  color $body-text
  background white
  border 2px solid #CCC
  .fa
    vertical-align initial
    color $d-gray
  &:hover
    background $l-gray
  &:active
  &:focus
  &:focus:active
    outline 0
    box-shadow none
    text-shadow none
    background white
    border-color $secondary


