template(name="documents")
  .documents
    .view-header.secondary-bg
      .container
        h1 All Documents
    table.table.table-striped.full-width-table
      tbody
        each documents
          tr.table-content-wrap
            .container
              .row
                .col-sm-3
                  td
                    a.title(href="{{path route='documentDetail' params=this}}")= title
                .col-sm-6
                  td.document-description {{truncatedBody}}
                .col-sm-3
                  td.document-group= groupName
