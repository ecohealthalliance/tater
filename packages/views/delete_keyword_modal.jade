template(name="deleteKeywordModal")
  #confirm-delete-keyword-modal.modal.fade(tabindex="-1" role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.fa.fa-times-circle
        .modal-body
          h3#keywordModal Confirmation
          p Delete keyword #{keywordLabel}?
        .modal-footer
          button.btn.btn-default(data-dismiss='modal' aria-hidden='true') Close
          button.btn.btn-danger#confirm-delete-keyword(
            aria-hidden='true' 
            data-keyword-id=keywordId
            disabled='{{#if archiving}} disabled {{/if}}') 
            | Delete
            if archiving
              i.fa.fa-spinner.fa-pulse.space-left-1
