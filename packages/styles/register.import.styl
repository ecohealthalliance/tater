.register
  h1
    font-size 2.5em
  input
    margin-bottom 20px
    max-width 700px
  .input-group
    max-width 700px
  label
    margin-bottom 5px
  .block
    background $ll-gray
    height 90vh
    min-height 600px
    padding 0
    +below(2)
      height auto
      min-height 200px
  .details-wrapper
    padding 0
    display none
    +above(3)
      background url('../../../images/marketing/annotated-docs-2.svg') #576E83 repeat-y
      background-position center -30px
      background-size 75% 100%
      display block
  .form-wrapper
    padding 30px 15px
    +above(3)
      padding-top 50px
      padding-left 15%
      padding-right 10%

.registration
  position relative
  margin-bottom 20px
  input[type=submit]
    width 100%
    margin-top 40px
    padding-top 12px
    padding-bottom 12px
    +above(2)
      width 50%
  [data-toggle=tooltip]
    pointer()

.registered
  padding 20px
  background lighten($confirm, 30%)
  text-shadow none
  border-radius 3px
  i
    position absolute
    width 15%
    font-size 3em
    color white
    display inline-block
    vertical-align middle
    width 15%
    +above(2)
      font-size 5em
  p
    margin-bottom 0
    &:first-of-type
      margin-bottom 5px

  .message
    display inline-block
    vertical-align middle
    padding-left 18%
    p:first-of-type
      font-weight 800
      font-size 1.5em

.input-note
  margin-top 5px
  color $d-gray
  font-size 90%
  font-style italic

.curtain-register
  @extend .curtain-white
  background RGBA(249, 249, 249, .8)
