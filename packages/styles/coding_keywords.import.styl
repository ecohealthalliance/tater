checkMark(center=false)
  &:hover
    &:after
      position absolute
      right 5px
      if center
        top 50%
        transform translate(0, -50%)
      else
        top 3px
      icon()
      content '\f058'

.clear-search
  position absolute
  right 25px
  top 50%
  transform translate(0,-50%)
  color $d-gray
  pointer()
  linkTransition()
  &:hover
    color $delete

.code-header
.code-sub-header
.code-keyword
  position relative
  shadow(255,.2)
  i
    color $m-gray
    &:hover
      color $m-gray

.coding
  .code-keyword
    checkMark(true)

.listing
  .showing:not(.selected)
    background none !important

.code-header
.code-sub-header
  position relative
  > span
    padding 2px 20px 2px 5px
  &.up
  &.down
    > i
      transition .1s ease-in-out
  &.up
    > i
      transform rotate(90deg)
  i
    position absolute
    left 15px
    top 2px
    cursor pointer
    font-size 1em
    &::before
      content '\f138'
      icon()
    &:hover
      color darken($secondary-dark, 20%)
      transition .1s ease-in-out

.code-header > span
.code-sub-header > span
.code-keyword > span
.filteredCodes > span
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  &:not(.selectable-code)
    color $m-gray

.code-header
  margin-bottom 5px
  font-size 1.1em
  font-weight 700
  color $body-text
  +above(5)
    font-size 1.3em
  > span
    pointer()
    display block
    position relative
    margin-left 35px
    overflow hidden
    text-overflow ellipsis
  .header-name
    display block
    padding-left 5px
  for $color, $index in $annotation-colors
    &.code-header-{$index+1}
      &.selectable
        > span
          &.selectable-code
            &:hover
              transition .2s ease-in-out
              background-color lighten($color, 20%)
            &.selected
              background-color $color
        > i
          color darken($color, 10%)
          &:hover
            color darken(@color, 10%)
        &:hover
          &:after
            color darken($color, 40%)

      .code-sub-header
        &.selectable
          > span
            pointer()
            padding-left 6px
            background-color transparent
            transition .1s ease-in-out
            &.selectable-code
              &.showing
                transition .1s ease-in-out
                &:after
                  color darken($color, 20%)
                  centerVertically()
              &:hover
                transition .2s ease-in-out
                background-color lighten($color, 20%)
            &.selected
              background-color $color
          > i
            color darken($color, 10%)
            &:hover
              color darken(@color, 10%)
        &:hover
          &:after
            color darken($color, 20%)
            &:after
              color darken($color, 30%)
              top 2px
              transform translate(0, -50%)
        .code-keyword
          > span
            border-bottom 1px solid lighten($color, 80%)
            transition .1s ease-in-out
            &:last-of-type
              border 0
          &.selectable
            > span
              pointer()
              &:hover
                background-color lighten($color, 20%)
                transition .1s ease-in-out
              &.selected
                background-color $color
                font-weight bold
                border-bottom 1px solid desaturate(darken($color, 10%), 15%)
            &:hover
              &::after
                centerVertically()
                color darken($color, 20%)

.code-sub-headers
.code-keywords
  margin 5px 0 15px 0
  font-size .9em

.code-sub-header
  padding-left 53px
  margin-bottom 2px
  font-weight 600
  span
    display block
    padding-left 5px
    margin-left 2px
  i
    left 38px
    top 2px

.code-keywords
  padding-left 10px

.keyword-button, .subheader-button, .header-button
  centerVertically()
  right 20px
  font-size 1.5em
  color $m-gray
  &:hover
    color $delete

.subheader-button, .header-button
  right 40px

.code-keyword
  font-weight 400
  span
    truncateString(false)
    padding 5px 20px 5px 5px

.filteredCodes
  margin-bottom 20px
  li
    position relative
    cursor pointer
    overflow hidden
    text-overflow ellipsis
    border-bottom 1px solid $border-color
    > span
      display block
      padding 5px 15px 5px 15px
      &:not(.selectable-code)
        color $m-gray
  .selectable
    for $color, $index in $annotation-colors
      &.code-{$index+1}
        .selected
          background-color $color
        &:hover
          background-color lighten($color, 10%)
  .header
      font-size 90%
  .sub-header
    font-weight 600
  .keyword
    font-weight 700

.filter-result
  .selectable-code
    &:hover
      background-color lighten($primary-light, 95%)
  .selected
    background-color desaturate(lighten($primary-light, 85%), 80%)

// Management

.code-management-container
  position relative
  min-height 700px
  containerShadow()
  addBorder(false, 1, $border-gray)
  addBorder('top', 1, $border-primary)
  border-bottom-right-radius 4px
  border-bottom-left-radius 4px
  overflow hidden
  .curtain-white
    &:last-of-type
      border-bottom-right-radius 4px

.code-management-list-wrap
  @extend .gradient-bottom
  position relative
  min-height 700px
  addBorder('right', 1, $border-primary)
  &:last-of-type
    border-right 0

.code-management-list-container
  overflow-x auto
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  padding-top 50px
  padding-bottom 75px
  z-index $bottom-layer
  background white
  .code-list
    margin-bottom 0
    box-shadow none
    li
      position relative
      padding 10px 70px 10px 10px
      pointer()
      &:hover
        color black
      &
      &:last-of-type
        addBorder('bottom', 1, lighten($l-gray, 20%))
      &.selected
        background lighten($background-secondary, 20%)
        font-weight bold
        &::after
          color $d-gray
      &.list-link
        padding 10px 70px 10px 10px
      &.not-clickable
        padding 10px 50px 10px 10px
        cursor auto
        &:hover
          background none
          color inherit
        &::after
          content ''
      &::after
        icon()
        content '\f054'
        centerVertically(true)
        right 15px
        color $l-gray

.code-management-list-header
  position absolute
  max-height 50px
  z-index $mid-layer
  top 0
  left 0
  right 0
  padding 10px
  background $sub-header-BG
  addBorder('bottom', 1, $border-primary)
  h4
    font-size 1.25em
    font-weight 600
  [class^='add']
    centerVertically(true)
    pointer()
    right 10px
    font-size 1.5em
    color $d-gray
    &:hover
    &.active
      color $secondary

.header-colors
  margin-bottom 15px
  li
    position relative
    display inline-block
    width 23%
    height 30px
    margin 1%
    border-radius 3px
    addBorder(false, 2, transparent)
    pointer()
    &::after
      centerPosition()
      icon()
      top 50%
      left 50%
      content '\f00c'
      color white
      font-size  0em
      opacity 0
      transition .15s

    &.selected
      border 2px solid #666
      &::after
        opacity 1
        font-size  1.5em

.code-details
  min-height 60px
  padding 15px
  background alpha($sub-header-BG, 80%)
  position absolute
  bottom 0
  left 0
  right 0

.disabled
  color lighten($primary-light, 70%) !important

.disabled span::after
  content ' (archived)'

.adding-code
  padding 15px 10px
  position relative
  addBorder('bottom', 1, lighten($primary-light, 60%))
  input
    margin 0 0 10px 0
  .add
    width 75%
    float right

  .cancel
    width 23%
    float left

  .close
    icon()
    position absolute
    right 5px
    top 5px
    content '\f00d'

for $color, $index in $annotation-colors
  .color-swatch-{$index+1}
    background-color $color
  .header-color-{$index+1}
    addBorder('left', 12, $color)
