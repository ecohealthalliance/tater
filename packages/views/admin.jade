template(name="admin")
  if currentUser
    if isAdmin
      .container
        a.btn.btn-primary.header-btn(href="{{path route='editCodingKeywords'}}")
          span Edit Coding Keywords
        hr
      .groups-container
        +groups
      .users-container
        +users
  else
    .container
      .row
        .col-sm-12
          p Please log in or sign up to continue.
