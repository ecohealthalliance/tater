layerCosmos($galaxyDistance=0)
  z-index $cosmos-layer + $galaxyDistance

layerModal()
  z-index $modal-layer

layerTop()
  z-index $top-layer

layerMid()
  z-index $mid-layer

layerBtm()
  z-index $bottom-layer

layerPage()
  z-index $page-layer

clearFix()
  &::after
    clear both
    display block
    content ''

cover()
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  layerCosmos()

overlay($color, $opacity)
  cover()
  background alpha($color, $opacity)

visible($visible)
  if $visible
    visibility visible
    opacity 1
  else
    visibility hidden
    opacity 0

addFont($fontTitle, $allTypes = true, type = '')
  @font-face
    if $allTypes
      src url('/fonts/' + $fontTitle + '.eot')
      src url('/fonts/' + $fontTitle + '.eot?#iefix') format('embedded-opentype'), url('/fonts/' + $fontTitle + '.woff') format('woff'), url('/fonts/{fontTitle}.ttf') format('truetype'), url('/fonts/' + $fontTitle + '.svg') format('svg')
    else
      src url('/fonts/' + $fontTitle + '.'+type)
    font-family $fontTitle

header-font()
  font-family $header-font

body-font()
  font-family $body-font

transition($prop=all, $duration = .2s, $args...)
  transition $prop $duration $args

linkTransition($prop=all, $time=.2s)
  transition($prop, $time, ease-in-out)

vAlign()
  display inline-block
  vertical-align middle

addBorder($w=false, $h, $color)
  if $w
    border-{$w} unit($h,'px') solid $color
  else
    border unit($h, 'px') solid $color

makeButton($color, $text = white, $dark = false, $noOutline = false, $hoverColor = white, $transition=true)
  addBorder(false, 1, darken($color, 10%))
  background $color
  if $dark
    @extend .light-shadow
    &:hover
      color $hoverColor
  else
    @extend .dark-shadow
  color $text
  &:hover
  &:focus
  &:active
    border-color darken($color, 30%)
    background darken($color, 20%)
    color $text
    background darken($color, 20%)
  &:disabled
    background desaturate($color, 50%)
    border-color darken($color, 30%)
    color lighten($color, 60%)
    &:hover
      background desaturate($color, 50%)
      border-color desaturate(darken($color, 20%), 50%)
  if $transition
    transition()
  if $noOutline
    &:focus
      outline 0

loading($positioned=true, $loadingText=false)
  @extend .icon
  if $positioned
    centerPosition()
    top 50%
    left 50%
    layerCosmos()
  opacity 1
  font-size 5em
  color $m-gray
  -webkit-filter blur(0)
  text-align center
  &::before
    animate(1s)
    content '\f1ce'
    display block
    transform-origin 49.4% 49% //Fixes the wobble in most cases
  if $showLoadingText
    &::after
      display block
      content 'loading'
      margin-top -10px
      font-size .25em
      color $m-gray

animate($speed)
  animation spin $speed infinite ease-in-out

@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

@-webkit-keyframes spin
  from
    -webkit-transform rotate(0deg)
  to
    -webkit-transform rotate(360deg)

@-moz-keyframes spin
  from
    -moz-transform rotate(0deg)
  to
    -moz-transform rotate(360deg)

@-o-keyframes spin
  from
    -o-transform rotate(0deg)
  to
    -o-transform rotate(360deg)

bg($path, $w, $h, $type)
  width $w
  height $h
  background-image url($path + '.' + $type)
  background-repeat no-repeat
  background-size @width @height
  text-indent -9999px
  +retina()
    background-image: url($path + '-2x.' + $type);

changeBGSize($w,$h)
  width $w
  height $h
  background-size $w $h

centerSmall($marginBottom=0)
  +below(400px)
    display block
    margin 0 auto
    float none
    if $marginBottom
      margin-bottom $marginBottom

buttonHover($hoverBG, $bg=none, $transition=true)
  if $transition
    transition()
  background $bg
  &:hover
    background $hoverBG
    color white

centerPosition($h=-50%, $v=-50%)
  position absolute
  transform translate($h, $v)

centerVertically(position=true)
  if position
    position absolute
  top 50%
  transform translate(0, -50%)

shadow($color, $opacity)
  text-shadow 0 1px 0 rgba($color, $color, $color, $opacity)

linkColor($color, $hover = darken($color, 35%))
  color $color
  &:hover
    color $hover

truncateString($white-space=true)
  if $white-space
    white-space nowrap
  overflow hidden
  text-overflow ellipsis

pointer()
  cursor pointer

borderRadius($tl,$tr,$br,$bl)
  border-radius $tl $tr $br $bl

selectedBG()
  background-color desaturate(lighten($secondary-light, 90%), 70%)

icon()
  @extend .icon

containerShadow()
  box-shadow 0 1px 2px rgba(100,100,100,.15)
