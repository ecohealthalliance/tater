selectedBG()
  background-color lighten($primary-light, 90%)

.annotation-list-heading
  width 55%
  padding-right 20px

.annotation-group
  h3
    body-font()
    padding-left 15px
    font-size 1.5em
    font-weight 600
  for $color, $index in $annotation-colors
    &.color-{$index+1}
      h3
        color darken($color, 20%)
      .annotation-detail
        background-color lighten($color,80%)
        border-top 2px solid transparent
        border-bottom 2px solid transparent
        linkTransition()
        &:hover
          background-color darken(@background-color, 5%)
          border-color darken($color, 10%)
      .details
        color darken($color, 10%)

.annotation-detail
  cursor pointer
  padding 15px 35px 15px 15px
  margin-bottom 10px
  p
    margin-bottom 10px
  .details
    font-size 90%
  .document-title
    float left
  .user-email
    float right

.show-flagged
  float right
  line-height 36px
  i
    margin-left 4px

.document-list-container
  margin-top -10px
  .group-docs
    margin-left 40px
    margin-bottom 15px
    li
      &:last-child
        border 0
  .group-selector
    @extend .code-header
    position relative
    i
      &:hover
        color $d-gray
    > span
      pointer()
      padding 5px
      borderRadius(4px, 0, 0, 4px)
      &:hover
        background-color lighten($primary-light, 90%)
      &.selected
        selectedBG()
  .document-selector
    padding 7px 35px 7px 15px
    border-bottom 1px solid lighten($primary-light, 80%)
    position relative
    pointer()
    &:hover
    &.selected
      selectedBG()
      borderRadius(2px, 0, 0, 2px)
    &.selected
      border-bottom 1px solid lighten($primary-light, 50%)
  .group-selector span
  .document-selector
    &.selected
      &::after
        @extend .icon
        centerVertically()
        right 15px
        content '\f06e'
        color lighten($primary-light,30%)
  .group-selector span
    &.selected
      &::after
        right 13px

.document-list-heading
  h2
    body-font()
    font-size 18px
    width 50%
    +below(1000px)
      font-size 16px
  .clear-filters
    centerVertically()
    color $primary-light
    right 15px
    i
      font-size 13px
      +below(1000px)
        font-size 20px
    span
      font-size 12px
      +below(1000px)
        display none
    &:hover
      color darken($primary-light, 20%)
    &.muted
      color desaturate(lighten($primary-light, 60%), 20%)

.doc-group
  display block
  color $d-gray
  font-size 80%

.doc-title
  font-weight 600
