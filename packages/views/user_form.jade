template(name="userForm")
  .container
    h3 Add a user
    .row
      .col-sm-8
        form#new-user-form
          input.form-control(name="group" type="hidden" value=groupId)
          .row
            .col-sm-8
              label Email
                input#user-email.form-control(name="email" type="text")
          .row
            .col-sm-8
              label Password
                input#user-password.form-control(name="password" type="password")
          .row
            .col-sm-8
              label Password confirm
                input#user-password-confirm.form-control(name="passwordconfirm" type="password")
          .checkbox
            label
              input#user-admin(name="admin" type="checkbox")
              span Is Admin
          input.btn.btn-primary(type="submit" value="Save")
