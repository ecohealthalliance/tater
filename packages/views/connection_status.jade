template(name="connectionStatus")
  unless connected
    .connection-status.flex-container
      .row
        .col-sm-12
          i.fa.fa-exclamation-triangle
          span Lost connection to Tater.
          span.reconnecting-in
        .col-sm-4.col-sm-offset-4
          a.btn.reconnect(href="#") Try now
      .gradient
